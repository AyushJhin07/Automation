{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.bigcommerce.create_order.schema.json",
  "title": "BigCommerce - Create Order",
  "description": "Create a new order",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.bigcommerce.create_order",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "customer_id": {
          "type": "number",
          "description": "Customer ID"
        },
        "products": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "product_id": {
                "type": "number"
              },
              "quantity": {
                "type": "number"
              }
            }
          },
          "description": "Order products"
        },
        "billing_address": {
          "type": "object",
          "description": "Billing address"
        },
        "shipping_address": {
          "type": "object",
          "description": "Shipping address"
        }
      },
      "required": [
        "products"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "E-Commerce"
        },
        "appName": {
          "type": "string",
          "const": "BigCommerce"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}