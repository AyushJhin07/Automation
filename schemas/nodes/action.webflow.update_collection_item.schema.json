{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.webflow.update_collection_item.schema.json",
  "title": "Webflow - Update Collection Item",
  "description": "Update an existing collection item",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.webflow.update_collection_item",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "collection_id": {
          "type": "string",
          "description": "Collection ID"
        },
        "item_id": {
          "type": "string",
          "description": "Item ID"
        },
        "fields": {
          "type": "object",
          "description": "Updated field values"
        },
        "live": {
          "type": "boolean",
          "default": false,
          "description": "Whether to publish the changes live"
        }
      },
      "required": [
        "collection_id",
        "item_id",
        "fields"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Website Builders"
        },
        "appName": {
          "type": "string",
          "const": "Webflow"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}