{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.google-forms.add_question.schema.json",
  "title": "Google Forms - Add Question",
  "description": "Add a question to the form",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.google-forms.add_question",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "formId": {
          "type": "string",
          "description": "Form ID"
        },
        "item": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "questionItem": {
              "type": "object",
              "properties": {
                "question": {
                  "type": "object",
                  "properties": {
                    "questionId": {
                      "type": "string"
                    },
                    "required": {
                      "type": "boolean"
                    },
                    "choiceQuestion": {
                      "type": "object"
                    },
                    "textQuestion": {
                      "type": "object"
                    },
                    "scaleQuestion": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "description": "Question item to add"
        },
        "location": {
          "type": "object",
          "properties": {
            "index": {
              "type": "number"
            }
          },
          "description": "Location to insert question"
        }
      },
      "required": [
        "formId",
        "item"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Productivity"
        },
        "appName": {
          "type": "string",
          "const": "Google Forms"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}