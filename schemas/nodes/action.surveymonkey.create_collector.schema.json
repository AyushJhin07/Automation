{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.surveymonkey.create_collector.schema.json",
  "title": "SurveyMonkey - Create Collector",
  "description": "Create a new collector for a survey",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.surveymonkey.create_collector",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "survey_id": {
          "type": "string",
          "description": "Survey ID"
        },
        "type": {
          "type": "string",
          "enum": [
            "weblink",
            "email"
          ],
          "description": "Collector type"
        },
        "name": {
          "type": "string",
          "description": "Collector name"
        },
        "thank_you_message": {
          "type": "string",
          "description": "Thank you message shown after completion"
        },
        "disqualification_message": {
          "type": "string",
          "description": "Message shown when respondent is disqualified"
        },
        "close_date": {
          "type": "string",
          "format": "date-time",
          "description": "Date when collector should close"
        },
        "closed_page_message": {
          "type": "string",
          "description": "Message shown when collector is closed"
        },
        "redirect_url": {
          "type": "string",
          "description": "URL to redirect to after completion"
        },
        "display_survey_results": {
          "type": "boolean",
          "description": "Whether to display survey results to respondents"
        },
        "edit_response_type": {
          "type": "string",
          "enum": [
            "until_complete",
            "never",
            "always"
          ],
          "description": "When respondents can edit their responses"
        },
        "anonymous_type": {
          "type": "string",
          "enum": [
            "not_anonymous",
            "partially_anonymous",
            "fully_anonymous"
          ],
          "description": "Level of anonymity"
        },
        "allow_multiple_responses": {
          "type": "boolean",
          "description": "Whether to allow multiple responses from same respondent"
        },
        "include_survey_url": {
          "type": "boolean",
          "description": "Whether to include survey URL in email invitations"
        }
      },
      "required": [
        "survey_id",
        "type"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Customer Feedback"
        },
        "appName": {
          "type": "string",
          "const": "SurveyMonkey"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}