{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.workday.terminate_worker.schema.json",
  "title": "Workday - Terminate Worker",
  "description": "Terminate a worker's employment",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.workday.terminate_worker",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "workerId": {
          "type": "string",
          "description": "Worker ID"
        },
        "terminationDate": {
          "type": "string",
          "format": "date",
          "description": "Termination date"
        },
        "terminationReason": {
          "type": "string",
          "enum": [
            "Voluntary",
            "Involuntary",
            "Retirement",
            "End of Contract",
            "Other"
          ],
          "description": "Reason for termination"
        },
        "lastDayWorked": {
          "type": "string",
          "format": "date",
          "description": "Last day worked"
        },
        "eligibleForRehire": {
          "type": "boolean",
          "default": true,
          "description": "Whether eligible for rehire"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes"
        }
      },
      "required": [
        "workerId",
        "terminationDate",
        "terminationReason"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "HR"
        },
        "appName": {
          "type": "string",
          "const": "Workday"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}