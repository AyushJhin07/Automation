{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.asana-enhanced.update_task.schema.json",
  "title": "Asana Enhanced - Update Task",
  "description": "Update an existing task",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.asana-enhanced.update_task",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "task_gid": {
          "type": "string",
          "description": "Task global ID"
        },
        "name": {
          "type": "string",
          "description": "Task name"
        },
        "assignee": {
          "type": "string",
          "description": "Assignee user ID or email"
        },
        "description": {
          "type": "string",
          "description": "Task description/notes"
        },
        "due_on": {
          "type": "string",
          "format": "date",
          "description": "Due date (YYYY-MM-DD)"
        },
        "completed": {
          "type": "boolean",
          "description": "Mark task as completed"
        },
        "priority": {
          "type": "string",
          "enum": [
            "low",
            "normal",
            "high"
          ],
          "description": "Task priority"
        }
      },
      "required": [
        "task_gid"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Project Management"
        },
        "appName": {
          "type": "string",
          "const": "Asana Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}