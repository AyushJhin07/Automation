{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.marketo.send_sample_email.schema.json",
  "title": "Marketo - Send Sample Email",
  "description": "Send a sample email",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.marketo.send_sample_email",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "emailId": {
          "type": "number",
          "description": "Email ID"
        },
        "emailAddress": {
          "type": "string",
          "format": "email",
          "description": "Email address to send sample to"
        },
        "textOnly": {
          "type": "boolean",
          "default": false,
          "description": "Send text-only version"
        },
        "leadId": {
          "type": "number",
          "description": "Lead ID to use for personalization"
        }
      },
      "required": [
        "emailId",
        "emailAddress"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Marketing"
        },
        "appName": {
          "type": "string",
          "const": "Marketo"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}