{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.pardot.create_prospect.schema.json",
  "title": "Pardot - Create Prospect",
  "description": "Create a new prospect",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.pardot.create_prospect",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "Prospect email address"
        },
        "first_name": {
          "type": "string",
          "description": "First name"
        },
        "last_name": {
          "type": "string",
          "description": "Last name"
        },
        "company": {
          "type": "string",
          "description": "Company name"
        },
        "website": {
          "type": "string",
          "description": "Website URL"
        },
        "job_title": {
          "type": "string",
          "description": "Job title"
        },
        "department": {
          "type": "string",
          "description": "Department"
        },
        "country": {
          "type": "string",
          "description": "Country"
        },
        "address_one": {
          "type": "string",
          "description": "Address line 1"
        },
        "address_two": {
          "type": "string",
          "description": "Address line 2"
        },
        "city": {
          "type": "string",
          "description": "City"
        },
        "state": {
          "type": "string",
          "description": "State"
        },
        "territory": {
          "type": "string",
          "description": "Territory"
        },
        "zip": {
          "type": "string",
          "description": "ZIP code"
        },
        "phone": {
          "type": "string",
          "description": "Phone number"
        },
        "fax": {
          "type": "string",
          "description": "Fax number"
        },
        "source": {
          "type": "string",
          "description": "Lead source"
        },
        "annual_revenue": {
          "type": "string",
          "description": "Annual revenue"
        },
        "employees": {
          "type": "string",
          "description": "Number of employees"
        },
        "industry": {
          "type": "string",
          "description": "Industry"
        },
        "years_in_business": {
          "type": "string",
          "description": "Years in business"
        },
        "comments": {
          "type": "string",
          "description": "Comments"
        },
        "notes": {
          "type": "string",
          "description": "Notes"
        },
        "score": {
          "type": "number",
          "description": "Prospect score"
        },
        "is_do_not_email": {
          "type": "boolean",
          "description": "Do not email flag"
        },
        "is_do_not_call": {
          "type": "boolean",
          "description": "Do not call flag"
        }
      },
      "required": [
        "email"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Marketing"
        },
        "appName": {
          "type": "string",
          "const": "Pardot"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}