          "type": "string",
          "description": "OData filter expression"
        },
        "$orderby": {
          "type": "string",
          "description": "Sort order"
        },
        "$top": {
          "type": "number",
          "minimum": 1,
          "maximum": 5000,
          "default": 50,
          "description": "Number of records to return"
        },
        "$skip": {
          "type": "number",
          "description": "Number of records to skip"
        },
        "$expand": {
          "type": "string",
          "description": "Related entities to expand"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "CRM"
        },
        "appName": {
          "type": "string",
          "const": "Microsoft Dynamics 365"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
