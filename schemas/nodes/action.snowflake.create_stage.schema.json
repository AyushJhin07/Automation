{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.snowflake.create_stage.schema.json",
  "title": "Snowflake - Create Stage",
  "description": "Create a new stage for data loading",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.snowflake.create_stage",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "stage_name": {
          "description": "Stage name",
          "type": "string"
        },
        "stage_type": {
          "description": "Stage type",
          "type": "string",
          "enum": [
            "internal",
            "external"
          ]
        },
        "location": {
          "description": "External stage location",
          "type": "string"
        },
        "credentials": {
          "description": "Cloud credentials",
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "stage_name",
        "stage_type"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Data Analytics"
        },
        "appName": {
          "type": "string",
          "const": "Snowflake"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "stage:create"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}