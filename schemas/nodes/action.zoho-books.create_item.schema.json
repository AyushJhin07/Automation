{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.zoho-books.create_item.schema.json",
  "title": "Zoho Books - Create Item",
  "description": "Create a new item",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.zoho-books.create_item",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Item name"
        },
        "description": {
          "type": "string",
          "description": "Item description"
        },
        "rate": {
          "type": "number",
          "minimum": 0,
          "description": "Item rate/price"
        },
        "accountId": {
          "type": "string",
          "description": "Account ID"
        },
        "taxId": {
          "type": "string",
          "description": "Tax ID"
        },
        "unit": {
          "type": "string",
          "description": "Unit of measurement"
        },
        "sku": {
          "type": "string",
          "description": "Stock keeping unit"
        },
        "productType": {
          "type": "string",
          "enum": [
            "goods",
            "service"
          ],
          "description": "Product type"
        },
        "itemType": {
          "type": "string",
          "enum": [
            "sales",
            "purchases",
            "sales_and_purchases",
            "inventory"
          ],
          "description": "Item type"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Accounting"
        },
        "appName": {
          "type": "string",
          "const": "Zoho Books"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}