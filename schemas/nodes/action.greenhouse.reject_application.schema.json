{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.greenhouse.reject_application.schema.json",
  "title": "Greenhouse - Reject Application",
  "description": "Reject an application",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.greenhouse.reject_application",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "Application ID"
        },
        "rejection_reason_id": {
          "type": "number",
          "description": "Rejection reason ID"
        },
        "notes": {
          "type": "string",
          "description": "Rejection notes"
        },
        "rejection_email": {
          "type": "object",
          "properties": {
            "send_email_at": {
              "type": "string",
              "format": "date-time"
            },
            "email_template_id": {
              "type": "number"
            }
          },
          "description": "Email to send to candidate"
        }
      },
      "required": [
        "id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "HR"
        },
        "appName": {
          "type": "string",
          "const": "Greenhouse"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}