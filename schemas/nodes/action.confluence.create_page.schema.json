{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.confluence.create_page.schema.json",
  "title": "Confluence - Create Page",
  "description": "Create a new Confluence page",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.confluence.create_page",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "space_key": {
          "description": "Space key",
          "type": "string"
        },
        "title": {
          "description": "Page title",
          "type": "string"
        },
        "content": {
          "description": "Page content (Confluence storage format)",
          "type": "string"
        },
        "parent_id": {
          "description": "Parent page ID",
          "type": "string"
        },
        "labels": {
          "description": "Page labels",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "space_key",
        "title",
        "content"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Collaboration"
        },
        "appName": {
          "type": "string",
          "const": "Confluence"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "write:confluence-content"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}