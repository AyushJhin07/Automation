{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.twilio.make_call.schema.json",
  "title": "Twilio - Make Call",
  "description": "Initiate phone call",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.twilio.make_call",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "to": {
          "description": "Recipient phone number",
          "type": "string"
        },
        "from": {
          "description": "Caller phone number",
          "type": "string"
        },
        "url": {
          "description": "TwiML URL for call instructions",
          "type": "string"
        }
      },
      "required": [
        "to",
        "from",
        "url"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "communication"
        },
        "appName": {
          "type": "string",
          "const": "Twilio"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "voice"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}