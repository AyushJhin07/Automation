{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.toggl.update_project.schema.json",
  "title": "Toggl Track - Update Project",
  "description": "Update an existing project",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.toggl.update_project",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "workspace_id": {
          "type": "number",
          "description": "Workspace ID"
        },
        "project_id": {
          "type": "number",
          "description": "Project ID"
        },
        "name": {
          "type": "string",
          "description": "Project name"
        },
        "client_id": {
          "type": "number",
          "description": "Client ID"
        },
        "is_private": {
          "type": "boolean",
          "description": "Whether the project is private"
        },
        "active": {
          "type": "boolean",
          "description": "Whether the project is active"
        },
        "color": {
          "type": "string",
          "description": "Project color (hex format)"
        },
        "billable": {
          "type": "boolean",
          "description": "Whether the project is billable by default"
        },
        "template": {
          "type": "boolean",
          "description": "Whether the project is a template"
        },
        "auto_estimates": {
          "type": "boolean",
          "description": "Whether to enable auto estimates"
        },
        "estimated_hours": {
          "type": "number",
          "description": "Estimated hours for the project"
        },
        "rate": {
          "type": "number",
          "description": "Hourly rate for the project"
        },
        "currency": {
          "type": "string",
          "description": "Currency code (e.g., USD, EUR)"
        }
      },
      "required": [
        "workspace_id",
        "project_id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Time Tracking"
        },
        "appName": {
          "type": "string",
          "const": "Toggl Track"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}