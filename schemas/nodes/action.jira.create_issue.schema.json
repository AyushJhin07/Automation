{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.jira.create_issue.schema.json",
  "title": "Jira - Create Issue",
  "description": "Create a new issue in Jira",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.jira.create_issue",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "projectKey": {
          "description": "Project key (e.g., PROJ)",
          "type": "string"
        },
        "summary": {
          "description": "Issue summary/title",
          "type": "string"
        },
        "description": {
          "description": "Issue description",
          "type": "string"
        },
        "issueType": {
          "description": "Type of issue to create",
          "type": "string"
        },
        "priority": {
          "description": "Issue priority",
          "type": "string",
          "default": "Medium"
        },
        "assignee": {
          "description": "Assignee account ID or email",
          "type": "string"
        },
        "reporter": {
          "description": "Reporter account ID or email",
          "type": "string"
        },
        "labels": {
          "description": "Array of labels to add to the issue",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "components": {
          "description": "Array of component names",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "fixVersions": {
          "description": "Array of fix version names",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dueDate": {
          "description": "Due date (YYYY-MM-DD)",
          "type": "string"
        }
      },
      "required": [
        "projectKey",
        "summary",
        "issueType"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Project Management"
        },
        "appName": {
          "type": "string",
          "const": "Jira"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "write:jira-work"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}