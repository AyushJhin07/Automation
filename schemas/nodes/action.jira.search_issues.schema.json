{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.jira.search_issues.schema.json",
  "title": "Jira - Search Issues",
  "description": "Search for issues using JQL (Jira Query Language)",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.jira.search_issues",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "jql": {
          "description": "JQL query string (e.g., 'project = PROJ AND status = Open')",
          "type": "string"
        },
        "maxResults": {
          "description": "Maximum number of results to return",
          "type": "number",
          "default": 50
        },
        "startAt": {
          "description": "Starting index for pagination",
          "type": "number",
          "default": 0
        },
        "fields": {
          "description": "Specific fields to return",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "jql"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Project Management"
        },
        "appName": {
          "type": "string",
          "const": "Jira"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "read:jira-work"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}