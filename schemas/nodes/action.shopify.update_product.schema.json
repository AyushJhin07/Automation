{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.shopify.update_product.schema.json",
  "title": "Shopify - Update Product",
  "description": "Update an existing product",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.shopify.update_product",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "productId": {
          "description": "Product ID",
          "type": "string"
        },
        "title": {
          "description": "Product title",
          "type": "string"
        },
        "body_html": {
          "description": "Product description",
          "type": "string"
        },
        "status": {
          "description": "Product status",
          "type": "string",
          "enum": [
            "active",
            "archived",
            "draft"
          ]
        },
        "tags": {
          "description": "Product tags",
          "type": "string"
        }
      },
      "required": [
        "productId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "ecommerce"
        },
        "appName": {
          "type": "string",
          "const": "Shopify"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "write_products"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}