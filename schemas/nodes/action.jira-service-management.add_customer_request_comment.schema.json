{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.jira-service-management.add_customer_request_comment.schema.json",
  "title": "Jira Service Management - Add Customer Request Comment",
  "description": "Add comment to customer request",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.jira-service-management.add_customer_request_comment",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "issueIdOrKey": {
          "type": "string",
          "description": "Issue ID or key"
        },
        "body": {
          "type": "string",
          "description": "Comment body"
        },
        "public": {
          "type": "boolean",
          "default": true,
          "description": "Whether comment is public"
        }
      },
      "required": [
        "issueIdOrKey",
        "body"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "IT Service Management"
        },
        "appName": {
          "type": "string",
          "const": "Jira Service Management"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}