{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.okta.list_groups.schema.json",
  "title": "Okta - List Groups",
  "description": "List groups",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.okta.list_groups",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "q": {
          "type": "string",
          "description": "Search query"
        },
        "after": {
          "type": "string",
          "description": "Cursor for pagination"
        },
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 10000,
          "default": 10000,
          "description": "Number of groups to return"
        },
        "filter": {
          "type": "string",
          "description": "Filter expression"
        },
        "search": {
          "type": "string",
          "description": "Search expression"
        },
        "sortBy": {
          "type": "string",
          "description": "Sort field"
        },
        "sortOrder": {
          "type": "string",
          "enum": [
            "asc",
            "desc"
          ],
          "description": "Sort order"
        },
        "expand": {
          "type": "string",
          "description": "Additional data to include"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Security"
        },
        "appName": {
          "type": "string",
          "const": "Okta"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}