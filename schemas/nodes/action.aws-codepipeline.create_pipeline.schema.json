{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.aws-codepipeline.create_pipeline.schema.json",
  "title": "AWS CodePipeline - Create Pipeline",
  "description": "Create a new CI/CD pipeline",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.aws-codepipeline.create_pipeline",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Pipeline name"
        },
        "role_arn": {
          "type": "string",
          "description": "IAM role ARN for pipeline"
        },
        "source_provider": {
          "type": "string",
          "enum": [
            "GitHub",
            "CodeCommit",
            "S3"
          ],
          "description": "Source provider"
        },
        "repository": {
          "type": "string",
          "description": "Repository name or S3 bucket"
        },
        "branch": {
          "type": "string",
          "default": "main",
          "description": "Branch to monitor"
        }
      },
      "required": [
        "name",
        "role_arn",
        "source_provider",
        "repository"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "DevOps"
        },
        "appName": {
          "type": "string",
          "const": "AWS CodePipeline"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}