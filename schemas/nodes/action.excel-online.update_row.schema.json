{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.excel-online.update_row.schema.json",
  "title": "Excel Online - Update Row",
  "description": "Update a row in an Excel worksheet",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.excel-online.update_row",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "workbookId": {
          "description": "Workbook ID",
          "type": "string"
        },
        "worksheet": {
          "description": "Worksheet name",
          "type": "string"
        },
        "rowIndex": {
          "description": "Row index (1-based)",
          "type": "number"
        },
        "values": {
          "description": "Array of new cell values",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "workbookId",
        "worksheet",
        "rowIndex",
        "values"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Productivity"
        },
        "appName": {
          "type": "string",
          "const": "Excel Online"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "Files.ReadWrite"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}