{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.google-calendar.quick_add.schema.json",
  "title": "Google Calendar - Quick Add Event",
  "description": "Create an event from natural language text",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.google-calendar.quick_add",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "calendarId": {
          "type": "string",
          "default": "primary",
          "description": "Calendar ID"
        },
        "text": {
          "type": "string",
          "description": "Natural language event description (e.g., 'Meeting with John tomorrow at 3pm')"
        },
        "sendUpdates": {
          "type": "string",
          "enum": [
            "all",
            "externalOnly",
            "none"
          ],
          "default": "none",
          "description": "Send updates to attendees"
        }
      },
      "required": [
        "text"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Productivity"
        },
        "appName": {
          "type": "string",
          "const": "Google Calendar"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}