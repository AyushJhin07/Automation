{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.excel-online.add_row.schema.json",
  "title": "Microsoft Excel Online - Add Row",
  "description": "Add a row to a table",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.excel-online.add_row",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "driveId": {
          "type": "string",
          "description": "Drive ID"
        },
        "itemId": {
          "type": "string",
          "description": "Workbook item ID"
        },
        "worksheetId": {
          "type": "string",
          "description": "Worksheet ID or name"
        },
        "tableId": {
          "type": "string",
          "description": "Table ID or name"
        },
        "values": {
          "type": "array",
          "items": {
            "type": "array"
          },
          "description": "Row values as 2D array"
        },
        "index": {
          "type": "number",
          "description": "Index where to insert row"
        }
      },
      "required": [
        "driveId",
        "itemId",
        "worksheetId",
        "tableId",
        "values"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Productivity"
        },
        "appName": {
          "type": "string",
          "const": "Microsoft Excel Online"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}