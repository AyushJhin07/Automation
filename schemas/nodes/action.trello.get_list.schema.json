{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.trello.get_list.schema.json",
  "title": "Trello - Get List",
  "description": "Get list details",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.trello.get_list",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "List ID"
        },
        "fields": {
          "type": "string",
          "description": "Comma-separated list of fields to return"
        },
        "cards": {
          "type": "string",
          "enum": [
            "none",
            "open",
            "closed",
            "all"
          ],
          "default": "none",
          "description": "Which cards to include"
        },
        "card_fields": {
          "type": "string",
          "description": "Fields to include for cards"
        },
        "board": {
          "type": "boolean",
          "description": "Whether to include board"
        },
        "board_fields": {
          "type": "string",
          "description": "Fields to include for board"
        }
      },
      "required": [
        "id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Project Management"
        },
        "appName": {
          "type": "string",
          "const": "Trello"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}