{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.workfront.search_projects.schema.json",
  "title": "Adobe Workfront - Search Projects",
  "description": "Search for projects",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.workfront.search_projects",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Project name filter"
        },
        "ownerID": {
          "type": "string",
          "description": "Filter by owner ID"
        },
        "status": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Filter by status"
        },
        "groupID": {
          "type": "string",
          "description": "Filter by group ID"
        },
        "portfolioID": {
          "type": "string",
          "description": "Filter by portfolio ID"
        },
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 2000,
          "default": 100,
          "description": "Maximum number of results"
        },
        "offset": {
          "type": "number",
          "minimum": 0,
          "default": 0,
          "description": "Offset for pagination"
        },
        "fields": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Fields to include in response"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Project Management"
        },
        "appName": {
          "type": "string",
          "const": "Adobe Workfront"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}