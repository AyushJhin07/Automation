{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.lever.list_postings.schema.json",
  "title": "Lever - List Postings",
  "description": "List job postings",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.lever.list_postings",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 100,
          "default": 10,
          "description": "Number of postings to return"
        },
        "offset": {
          "type": "string",
          "description": "Pagination offset cursor"
        },
        "include_archived": {
          "type": "boolean",
          "default": false,
          "description": "Include archived postings"
        },
        "include_confidential": {
          "type": "boolean",
          "default": false,
          "description": "Include confidential postings"
        },
        "team_id": {
          "type": "string",
          "description": "Filter by team ID"
        },
        "location_id": {
          "type": "string",
          "description": "Filter by location ID"
        },
        "commitment_id": {
          "type": "string",
          "description": "Filter by commitment ID"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "HR"
        },
        "appName": {
          "type": "string",
          "const": "Lever"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}