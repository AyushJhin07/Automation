{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.smartsheet.get_report.schema.json",
  "title": "Smartsheet - Get Report",
  "description": "Get report details",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.smartsheet.get_report",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "reportId": {
          "type": "string",
          "description": "Report ID"
        },
        "include": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "attachments",
              "discussions",
              "filters",
              "format",
              "objectValue",
              "source"
            ]
          },
          "description": "Additional elements to include"
        },
        "pageSize": {
          "type": "number",
          "minimum": 1,
          "maximum": 10000,
          "description": "Number of rows per page"
        },
        "page": {
          "type": "number",
          "minimum": 1,
          "description": "Page number"
        }
      },
      "required": [
        "reportId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Project Management"
        },
        "appName": {
          "type": "string",
          "const": "Smartsheet"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}