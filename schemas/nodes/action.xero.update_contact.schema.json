{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.xero.update_contact.schema.json",
  "title": "Xero - Update Contact",
  "description": "Update an existing contact",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.xero.update_contact",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "contactId": {
          "type": "string",
          "description": "Contact ID"
        },
        "name": {
          "type": "string",
          "description": "Contact name"
        },
        "emailAddress": {
          "type": "string",
          "format": "email",
          "description": "Email address"
        },
        "contactStatus": {
          "type": "string",
          "enum": [
            "ACTIVE",
            "ARCHIVED"
          ],
          "description": "Contact status"
        },
        "firstName": {
          "type": "string",
          "description": "First name"
        },
        "lastName": {
          "type": "string",
          "description": "Last name"
        },
        "addresses": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "addressType": {
                "type": "string",
                "enum": [
                  "POBOX",
                  "STREET"
                ]
              },
              "addressLine1": {
                "type": "string"
              },
              "city": {
                "type": "string"
              },
              "region": {
                "type": "string"
              },
              "postalCode": {
                "type": "string"
              },
              "country": {
                "type": "string"
              }
            }
          },
          "description": "Contact addresses"
        },
        "phones": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "phoneType": {
                "type": "string",
                "enum": [
                  "DEFAULT",
                  "DDI",
                  "MOBILE",
                  "FAX"
                ]
              },
              "phoneNumber": {
                "type": "string"
              }
            }
          },
          "description": "Contact phone numbers"
        }
      },
      "required": [
        "contactId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Accounting"
        },
        "appName": {
          "type": "string",
          "const": "Xero"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}