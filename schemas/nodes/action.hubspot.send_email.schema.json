{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.hubspot.send_email.schema.json",
  "title": "HubSpot - Send Email",
  "description": "Send an email through HubSpot",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.hubspot.send_email",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "emailId": {
          "description": "HubSpot email template ID",
          "type": "string"
        },
        "recipient": {
          "description": "Recipient email address",
          "type": "string"
        },
        "contactProperties": {
          "description": "Contact properties for personalization",
          "type": "object",
          "additionalProperties": true
        },
        "customProperties": {
          "description": "Custom properties for email personalization",
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "emailId",
        "recipient"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "CRM"
        },
        "appName": {
          "type": "string",
          "const": "HubSpot"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "content"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}