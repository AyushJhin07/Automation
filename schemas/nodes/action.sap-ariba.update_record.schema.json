{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.sap-ariba.update_record.schema.json",
  "title": "SAP Ariba - Update Record",
  "description": "Update an existing record in SAP Ariba",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.sap-ariba.update_record",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "id": {
          "description": "Record ID",
          "type": "string"
        },
        "data": {
          "description": "Updated record data",
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "id",
        "data"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Procurement"
        },
        "appName": {
          "type": "string",
          "const": "SAP Ariba"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}