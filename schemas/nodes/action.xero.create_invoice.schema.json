{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.xero.create_invoice.schema.json",
  "title": "Xero - Create Invoice",
  "description": "Create a new invoice",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.xero.create_invoice",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "ACCREC",
            "ACCPAY"
          ],
          "description": "Invoice type (ACCREC=sales, ACCPAY=bill)"
        },
        "contact": {
          "type": "object",
          "properties": {
            "contactID": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          },
          "description": "Contact information"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "Invoice date"
        },
        "dueDate": {
          "type": "string",
          "format": "date",
          "description": "Due date"
        },
        "lineAmountTypes": {
          "type": "string",
          "enum": [
            "Exclusive",
            "Inclusive",
            "NoTax"
          ],
          "default": "Exclusive",
          "description": "Line amount types"
        },
        "lineItems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "quantity": {
                "type": "number",
                "minimum": 0
              },
              "unitAmount": {
                "type": "number",
                "minimum": 0
              },
              "itemCode": {
                "type": "string"
              },
              "accountCode": {
                "type": "string"
              },
              "taxType": {
                "type": "string"
              },
              "taxAmount": {
                "type": "number"
              },
              "lineAmount": {
                "type": "number"
              },
              "discountRate": {
                "type": "number",
                "minimum": 0,
                "maximum": 100
              }
            },
            "required": [
              "description",
              "quantity",
              "unitAmount"
            ]
          },
          "description": "Invoice line items"
        },
        "invoiceNumber": {
          "type": "string",
          "description": "Invoice number"
        },
        "reference": {
          "type": "string",
          "description": "Reference"
        },
        "brandingThemeID": {
          "type": "string",
          "description": "Branding theme ID"
        },
        "url": {
          "type": "string",
          "description": "URL link to source document"
        },
        "currencyCode": {
          "type": "string",
          "description": "Currency code"
        },
        "currencyRate": {
          "type": "number",
          "minimum": 0,
          "description": "Currency rate"
        },
        "status": {
          "type": "string",
          "enum": [
            "DRAFT",
            "SUBMITTED",
            "AUTHORISED"
          ],
          "default": "DRAFT",
          "description": "Invoice status"
        },
        "sentToContact": {
          "type": "boolean",
          "default": false,
          "description": "Whether invoice has been sent to contact"
        },
        "expectedPaymentDate": {
          "type": "string",
          "format": "date",
          "description": "Expected payment date"
        },
        "plannedPaymentDate": {
          "type": "string",
          "format": "date",
          "description": "Planned payment date"
        }
      },
      "required": [
        "type",
        "contact",
        "lineItems"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Accounting"
        },
        "appName": {
          "type": "string",
          "const": "Xero"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}