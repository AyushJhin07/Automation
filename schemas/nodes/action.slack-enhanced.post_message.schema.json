{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.slack-enhanced.post_message.schema.json",
  "title": "Slack Enhanced - Post Message",
  "description": "Post a message to a channel",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.slack-enhanced.post_message",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "channel": {
          "description": "Channel ID or name",
          "type": "string"
        },
        "text": {
          "description": "Message text",
          "type": "string"
        },
        "blocksJson": {
          "description": "Rich message blocks JSON",
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "channel",
        "text"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Communication"
        },
        "appName": {
          "type": "string",
          "const": "Slack Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "chat:write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}