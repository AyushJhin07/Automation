{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.okta.assign_group.schema.json",
  "title": "Okta - Assign Group",
  "description": "Assign a user to a group",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.okta.assign_group",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "userId": {
          "description": "User ID",
          "type": "string"
        },
        "groupId": {
          "description": "Group ID",
          "type": "string"
        }
      },
      "required": [
        "userId",
        "groupId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Identity Management"
        },
        "appName": {
          "type": "string",
          "const": "Okta"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "groups:manage"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}