{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.bitbucket.list_repositories.schema.json",
  "title": "Bitbucket - List Repositories",
  "description": "List repositories for a workspace",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.bitbucket.list_repositories",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "workspace": {
          "type": "string",
          "description": "Workspace name"
        },
        "role": {
          "type": "string",
          "enum": [
            "owner",
            "admin",
            "contributor",
            "member"
          ],
          "description": "Filter by role"
        },
        "q": {
          "type": "string",
          "description": "Search query"
        },
        "sort": {
          "type": "string",
          "enum": [
            "created_on",
            "updated_on",
            "name"
          ],
          "description": "Sort field"
        }
      },
      "required": [
        "workspace"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Development"
        },
        "appName": {
          "type": "string",
          "const": "Bitbucket"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}