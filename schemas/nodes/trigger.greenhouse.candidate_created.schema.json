{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/trigger.greenhouse.candidate_created.schema.json",
  "title": "Greenhouse - Candidate Created",
  "description": "Triggered when a candidate is created",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "trigger.greenhouse.candidate_created",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "page": {
          "type": "integer",
          "minimum": 1,
          "description": "Page number to request from the Harvest API"
        },
        "perPage": {
          "type": "integer",
          "minimum": 1,
          "maximum": 500,
          "description": "Number of candidates to return per page"
        },
        "createdAfter": {
          "type": "string",
          "format": "date-time",
          "description": "Only return candidates created after this timestamp"
        },
        "updatedAfter": {
          "type": "string",
          "format": "date-time",
          "description": "Only return candidates updated after this timestamp"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Recruitment"
        },
        "appName": {
          "type": "string",
          "const": "Greenhouse"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "candidates:read"
          ]
        },
        "outputSchema": {
          "type": "object",
          "description": "Schema for trigger output data",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}