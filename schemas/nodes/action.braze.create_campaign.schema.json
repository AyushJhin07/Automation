{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.braze.create_campaign.schema.json",
  "title": "Braze - Create Campaign",
  "description": "Create a new campaign",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.braze.create_campaign",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Campaign name"
        },
        "description": {
          "type": "string",
          "description": "Campaign description"
        },
        "messages": {
          "type": "object",
          "description": "Campaign messages"
        },
        "schedule": {
          "type": "object",
          "description": "Campaign schedule"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Campaign tags"
        }
      },
      "required": [
        "name",
        "messages"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Marketing"
        },
        "appName": {
          "type": "string",
          "const": "Braze"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}