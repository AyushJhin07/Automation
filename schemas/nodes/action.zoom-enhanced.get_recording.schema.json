{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.zoom-enhanced.get_recording.schema.json",
  "title": "Zoom Enhanced - Get Recording",
  "description": "Get recording details",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.zoom-enhanced.get_recording",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "meetingId": {
          "type": "string",
          "description": "Meeting UUID or ID"
        },
        "include_fields": {
          "type": "string",
          "description": "Additional fields to include"
        },
        "ttl": {
          "type": "number",
          "description": "Time to live for download URLs in seconds"
        }
      },
      "required": [
        "meetingId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Communication"
        },
        "appName": {
          "type": "string",
          "const": "Zoom Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}