{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.ringcentral.get_messages.schema.json",
  "title": "RingCentral - Get Messages",
  "description": "Get message list",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.ringcentral.get_messages",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "messageType": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Fax",
              "SMS",
              "VoiceMail",
              "Pager"
            ]
          },
          "description": "Message types to filter"
        },
        "availability": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Alive",
              "Deleted",
              "Purged"
            ]
          },
          "description": "Message availability"
        },
        "conversationId": {
          "type": "string",
          "description": "Conversation ID"
        },
        "dateFrom": {
          "type": "string",
          "format": "date-time",
          "description": "Start date"
        },
        "dateTo": {
          "type": "string",
          "format": "date-time",
          "description": "End date"
        },
        "direction": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Inbound",
              "Outbound"
            ]
          },
          "description": "Message direction"
        },
        "distinctConversations": {
          "type": "boolean",
          "description": "Whether to return distinct conversations"
        },
        "messageStatus": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Queued",
              "Sent",
              "Received",
              "DeliveryFailed",
              "SendingFailed",
              "Delivered"
            ]
          },
          "description": "Message status"
        },
        "readStatus": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Read",
              "Unread"
            ]
          },
          "description": "Read status"
        },
        "page": {
          "type": "number",
          "minimum": 1,
          "default": 1,
          "description": "Page number"
        },
        "perPage": {
          "type": "number",
          "minimum": 1,
          "maximum": 1000,
          "default": 100,
          "description": "Messages per page"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Communication"
        },
        "appName": {
          "type": "string",
          "const": "RingCentral"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}