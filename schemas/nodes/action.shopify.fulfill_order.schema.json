{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.shopify.fulfill_order.schema.json",
  "title": "Shopify - Fulfill Order",
  "description": "Fulfill an order",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.shopify.fulfill_order",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "orderId": {
          "description": "Order ID",
          "type": "string"
        },
        "location_id": {
          "description": "Fulfillment location ID",
          "type": "string"
        },
        "tracking_number": {
          "description": "Tracking number",
          "type": "string"
        },
        "tracking_company": {
          "description": "Tracking company",
          "type": "string"
        },
        "notify_customer": {
          "description": "Send notification to customer",
          "type": "boolean",
          "default": true
        }
      },
      "required": [
        "orderId",
        "location_id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "ecommerce"
        },
        "appName": {
          "type": "string",
          "const": "Shopify"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "write_fulfillments"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}