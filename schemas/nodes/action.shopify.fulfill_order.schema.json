{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.shopify.fulfill_order.schema.json",
  "title": "Shopify - Fulfill Order",
  "description": "Create a fulfillment for an order",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.shopify.fulfill_order",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "order_id": {
          "type": "string",
          "description": "Order ID to fulfill"
        },
        "location_id": {
          "type": "string",
          "description": "Location ID for fulfillment"
        },
        "tracking_number": {
          "type": "string",
          "description": "Tracking number"
        },
        "tracking_company": {
          "type": "string",
          "description": "Tracking company name"
        },
        "tracking_url": {
          "type": "string",
          "description": "Tracking URL"
        },
        "notify_customer": {
          "type": "boolean",
          "default": true,
          "description": "Send notification to customer"
        },
        "line_items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "quantity": {
                "type": "number"
              }
            }
          },
          "description": "Line items to fulfill"
        }
      },
      "required": [
        "order_id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "ecommerce"
        },
        "appName": {
          "type": "string",
          "const": "Shopify"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}