{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.monday-enhanced.get_users.schema.json",
  "title": "Monday.com Enhanced - Get Users",
  "description": "Get users in the account",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.monday-enhanced.get_users",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 100,
          "default": 25,
          "description": "Number of users to return"
        },
        "page": {
          "type": "number",
          "minimum": 1,
          "default": 1,
          "description": "Page number"
        },
        "ids": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Specific user IDs to retrieve"
        },
        "kind": {
          "type": "string",
          "enum": [
            "all",
            "non_guests",
            "guests",
            "non_pending"
          ],
          "default": "all",
          "description": "Filter by user kind"
        },
        "newest_first": {
          "type": "boolean",
          "default": false,
          "description": "Sort by newest first"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Project Management"
        },
        "appName": {
          "type": "string",
          "const": "Monday.com Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}