{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.onedrive.get_files.schema.json",
  "title": "OneDrive - Get Files",
  "description": "Get files from a folder",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.onedrive.get_files",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "folderId": {
          "type": "string",
          "description": "Folder ID (defaults to root)"
        },
        "$top": {
          "type": "number",
          "minimum": 1,
          "maximum": 1000,
          "description": "Number of items to return"
        },
        "$skip": {
          "type": "number",
          "minimum": 0,
          "description": "Number of items to skip"
        },
        "$filter": {
          "type": "string",
          "description": "OData filter expression"
        },
        "$orderby": {
          "type": "string",
          "description": "OData order by expression"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Storage"
        },
        "appName": {
          "type": "string",
          "const": "OneDrive"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}