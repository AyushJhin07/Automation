{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.bamboohr.create_time_off_request.schema.json",
  "title": "BambooHR - Create Time Off Request",
  "description": "Submit a time off request",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.bamboohr.create_time_off_request",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "employeeId": {
          "description": "Employee ID",
          "type": "string"
        },
        "timeOffTypeId": {
          "description": "Time off type ID",
          "type": "string"
        },
        "start": {
          "description": "Start date (YYYY-MM-DD)",
          "type": "string"
        },
        "end": {
          "description": "End date (YYYY-MM-DD)",
          "type": "string"
        },
        "note": {
          "description": "Request note",
          "type": "string"
        }
      },
      "required": [
        "employeeId",
        "timeOffTypeId",
        "start",
        "end"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "HR Management"
        },
        "appName": {
          "type": "string",
          "const": "BambooHR"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "time_off:write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}