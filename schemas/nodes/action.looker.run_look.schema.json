{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.looker.run_look.schema.json",
  "title": "Looker - Run Look",
  "description": "Run a Look and return results",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.looker.run_look",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "lookId": {
          "type": "string",
          "description": "Look ID to run"
        },
        "resultFormat": {
          "type": "string",
          "enum": [
            "json",
            "csv",
            "txt",
            "html",
            "xlsx",
            "png",
            "jpg"
          ],
          "default": "json",
          "description": "Format for results"
        },
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 50000,
          "description": "Row limit for results"
        },
        "cache": {
          "type": "boolean",
          "default": true,
          "description": "Use cached results if available"
        },
        "serverTableCalculations": {
          "type": "boolean",
          "default": false,
          "description": "Perform table calculations on server"
        }
      },
      "required": [
        "lookId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Analytics"
        },
        "appName": {
          "type": "string",
          "const": "Looker"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}