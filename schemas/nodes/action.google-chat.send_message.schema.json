{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.google-chat.send_message.schema.json",
  "title": "Google Chat - Send Message",
  "description": "Send a message to a Chat space",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.google-chat.send_message",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "space": {
          "type": "string",
          "description": "Space name (spaces/AAABBBCCC)"
        },
        "text": {
          "type": "string",
          "description": "Message text"
        },
        "thread": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "description": "Thread to reply to"
        },
        "cards": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "description": "Card attachments"
        },
        "cardsV2": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "description": "Card v2 attachments"
        },
        "actionResponse": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "description": "Action response configuration"
        }
      },
      "required": [
        "space",
        "text"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Communication"
        },
        "appName": {
          "type": "string",
          "const": "Google Chat"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}