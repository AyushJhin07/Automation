{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.sentry.create_project.schema.json",
  "title": "Sentry - Create Project",
  "description": "Create a new project",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.sentry.create_project",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "organizationSlug": {
          "type": "string",
          "description": "Organization slug"
        },
        "name": {
          "type": "string",
          "description": "Project name"
        },
        "slug": {
          "type": "string",
          "description": "Project slug"
        },
        "platform": {
          "type": "string",
          "description": "Platform identifier"
        },
        "defaultRules": {
          "type": "boolean",
          "default": true,
          "description": "Create default alert rules"
        }
      },
      "required": [
        "organizationSlug",
        "name"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Monitoring"
        },
        "appName": {
          "type": "string",
          "const": "Sentry"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}