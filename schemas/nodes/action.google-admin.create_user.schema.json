{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.google-admin.create_user.schema.json",
  "title": "Google Admin - Create User",
  "description": "Create a new user account",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.google-admin.create_user",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "primaryEmail": {
          "description": "Primary email address",
          "type": "string"
        },
        "name": {
          "description": "Name object with givenName and familyName",
          "type": "object",
          "additionalProperties": true
        },
        "password": {
          "description": "User password",
          "type": "string"
        }
      },
      "required": [
        "primaryEmail",
        "name",
        "password"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Admin"
        },
        "appName": {
          "type": "string",
          "const": "Google Admin"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "https://www.googleapis.com/auth/admin.directory.user"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}