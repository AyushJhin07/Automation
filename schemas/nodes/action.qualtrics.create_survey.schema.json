{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.qualtrics.create_survey.schema.json",
  "title": "Qualtrics - Create Survey",
  "description": "Create a new survey",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.qualtrics.create_survey",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "SurveyName": {
          "type": "string",
          "description": "Survey name"
        },
        "Language": {
          "type": "string",
          "default": "EN",
          "description": "Survey language"
        },
        "ProjectCategory": {
          "type": "string",
          "default": "CORE",
          "description": "Project category"
        }
      },
      "required": [
        "SurveyName"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Surveys"
        },
        "appName": {
          "type": "string",
          "const": "Qualtrics"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}