{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.xero.update_invoice.schema.json",
  "title": "Xero - Update Invoice",
  "description": "Update an existing invoice",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.xero.update_invoice",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "invoiceId": {
          "type": "string",
          "description": "Invoice ID"
        },
        "status": {
          "type": "string",
          "enum": [
            "DRAFT",
            "SUBMITTED",
            "AUTHORISED",
            "DELETED",
            "VOIDED"
          ],
          "description": "Invoice status"
        },
        "reference": {
          "type": "string",
          "description": "Reference"
        },
        "dueDate": {
          "type": "string",
          "format": "date",
          "description": "Due date"
        },
        "lineItems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "lineItemID": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "quantity": {
                "type": "number",
                "minimum": 0
              },
              "unitAmount": {
                "type": "number",
                "minimum": 0
              }
            }
          },
          "description": "Invoice line items to update"
        }
      },
      "required": [
        "invoiceId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Accounting"
        },
        "appName": {
          "type": "string",
          "const": "Xero"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}