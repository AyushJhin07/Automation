{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.greenhouse.add_note.schema.json",
  "title": "Greenhouse - Add Note",
  "description": "Add note to candidate",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.greenhouse.add_note",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "candidateId": {
          "description": "Candidate ID",
          "type": "string"
        },
        "message": {
          "description": "Note content",
          "type": "string"
        }
      },
      "required": [
        "candidateId",
        "message"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Recruitment"
        },
        "appName": {
          "type": "string",
          "const": "Greenhouse"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "candidates:write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}