{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.sharepoint.share_link.schema.json",
  "title": "SharePoint - Create Sharing Link",
  "description": "Create a sharing link for a file or folder",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.sharepoint.share_link",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "siteId": {
          "type": "string",
          "description": "SharePoint site ID"
        },
        "driveId": {
          "type": "string",
          "description": "Drive ID"
        },
        "itemId": {
          "type": "string",
          "description": "File or folder ID"
        },
        "type": {
          "type": "string",
          "enum": [
            "view",
            "edit",
            "embed"
          ],
          "default": "view",
          "description": "Type of sharing link"
        },
        "scope": {
          "type": "string",
          "enum": [
            "anonymous",
            "organization",
            "users"
          ],
          "default": "anonymous",
          "description": "Who can access the link"
        },
        "password": {
          "type": "string",
          "description": "Password for the link"
        },
        "expirationDateTime": {
          "type": "string",
          "format": "date-time",
          "description": "Link expiration date"
        }
      },
      "required": [
        "siteId",
        "itemId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "File Storage"
        },
        "appName": {
          "type": "string",
          "const": "SharePoint"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}