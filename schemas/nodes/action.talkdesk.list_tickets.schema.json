{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.talkdesk.list_tickets.schema.json",
  "title": "Talkdesk - List Tickets",
  "description": "List tickets with filters",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.talkdesk.list_tickets",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "page": {
          "type": "number",
          "minimum": 1,
          "default": 1,
          "description": "Page number"
        },
        "per_page": {
          "type": "number",
          "minimum": 1,
          "maximum": 100,
          "default": 20,
          "description": "Number of tickets per page"
        },
        "status": {
          "type": "string",
          "enum": [
            "open",
            "pending",
            "resolved",
            "closed"
          ],
          "description": "Filter by status"
        },
        "priority": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high",
            "urgent"
          ],
          "description": "Filter by priority"
        },
        "assignee_id": {
          "type": "string",
          "description": "Filter by assignee ID"
        },
        "contact_id": {
          "type": "string",
          "description": "Filter by contact ID"
        },
        "tag": {
          "type": "string",
          "description": "Filter by tag"
        },
        "created_after": {
          "type": "string",
          "format": "date-time",
          "description": "Filter tickets created after this date"
        },
        "created_before": {
          "type": "string",
          "format": "date-time",
          "description": "Filter tickets created before this date"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Customer Support"
        },
        "appName": {
          "type": "string",
          "const": "Talkdesk"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}