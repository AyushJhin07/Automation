{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.servicenow.approve_request.schema.json",
  "title": "ServiceNow - Approve Request",
  "description": "Approve a change request or other approval",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.servicenow.approve_request",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "request_id": {
          "description": "Request sys_id",
          "type": "string"
        },
        "state": {
          "description": "Approval state",
          "type": "string",
          "enum": [
            "approved",
            "rejected"
          ]
        },
        "comments": {
          "description": "Approval comments",
          "type": "string"
        }
      },
      "required": [
        "request_id",
        "state"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "ITSM"
        },
        "appName": {
          "type": "string",
          "const": "ServiceNow"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "approval_write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}