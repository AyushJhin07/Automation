{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.shopify.cancel_order.schema.json",
  "title": "Shopify - Cancel Order",
  "description": "Cancel an order",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.shopify.cancel_order",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "orderId": {
          "description": "Order ID",
          "type": "string"
        },
        "reason": {
          "description": "Cancellation reason",
          "type": "string",
          "enum": [
            "customer",
            "fraud",
            "inventory",
            "declined",
            "other"
          ]
        },
        "email": {
          "description": "Send cancellation email",
          "type": "boolean",
          "default": true
        }
      },
      "required": [
        "orderId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "ecommerce"
        },
        "appName": {
          "type": "string",
          "const": "Shopify"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "write_orders"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}