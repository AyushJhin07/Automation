{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.gmail-enhanced.forward.schema.json",
  "title": "Gmail Enhanced - Forward Email",
  "description": "Forward an email",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.gmail-enhanced.forward",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "msgId": {
          "description": "Message ID to forward",
          "type": "string"
        },
        "to": {
          "description": "Forward to email addresses",
          "type": "string"
        }
      },
      "required": [
        "msgId",
        "to"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Email"
        },
        "appName": {
          "type": "string",
          "const": "Gmail Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "https://www.googleapis.com/auth/gmail.compose"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}