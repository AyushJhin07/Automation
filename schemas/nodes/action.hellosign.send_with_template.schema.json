{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.hellosign.send_with_template.schema.json",
  "title": "HelloSign - Send with Template",
  "description": "Send signature request using template",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.hellosign.send_with_template",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "template_id": {
          "type": "string",
          "description": "Template ID"
        },
        "title": {
          "type": "string",
          "description": "Title of the signature request"
        },
        "subject": {
          "type": "string",
          "description": "Subject of the signature request email"
        },
        "message": {
          "type": "string",
          "description": "Custom message"
        },
        "signers": {
          "type": "object",
          "description": "Signer assignments by role"
        },
        "ccs": {
          "type": "object",
          "description": "CC assignments by role"
        },
        "custom_fields": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          },
          "description": "Custom field values"
        }
      },
      "required": [
        "template_id",
        "signers"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Documents"
        },
        "appName": {
          "type": "string",
          "const": "HelloSign"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}