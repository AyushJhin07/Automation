{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/trigger.talkdesk.ticket_status_changed.schema.json",
  "title": "Talkdesk - Ticket Status Changed",
  "description": "Triggered when a ticket status changes",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "trigger.talkdesk.ticket_status_changed",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "from_status": {
          "type": "string",
          "enum": [
            "open",
            "pending",
            "resolved",
            "closed"
          ],
          "description": "Filter by previous status"
        },
        "to_status": {
          "type": "string",
          "enum": [
            "open",
            "pending",
            "resolved",
            "closed"
          ],
          "description": "Filter by new status"
        },
        "assignee_id": {
          "type": "string",
          "description": "Filter by assignee ID"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Customer Support"
        },
        "appName": {
          "type": "string",
          "const": "Talkdesk"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "outputSchema": {
          "type": "object",
          "description": "Schema for trigger output data",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}