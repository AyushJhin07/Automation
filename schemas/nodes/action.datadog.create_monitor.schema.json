{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.datadog.create_monitor.schema.json",
  "title": "Datadog - Create Monitor",
  "description": "Create a monitor in Datadog",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.datadog.create_monitor",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "metric alert",
            "service check",
            "event alert",
            "process alert",
            "log alert",
            "anomaly",
            "outlier",
            "forecast"
          ],
          "description": "Monitor type"
        },
        "query": {
          "type": "string",
          "description": "Monitor query"
        },
        "name": {
          "type": "string",
          "description": "Monitor name"
        },
        "message": {
          "type": "string",
          "description": "Monitor message"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Monitor tags"
        },
        "options": {
          "type": "object",
          "properties": {
            "thresholds": {
              "type": "object"
            },
            "notify_audit": {
              "type": "boolean"
            },
            "timeout_h": {
              "type": "number"
            },
            "evaluation_delay": {
              "type": "number"
            }
          },
          "description": "Monitor options"
        },
        "multi": {
          "type": "boolean",
          "description": "Multi-alert monitor"
        },
        "restricted_roles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Restricted roles"
        }
      },
      "required": [
        "type",
        "query",
        "name"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Monitoring"
        },
        "appName": {
          "type": "string",
          "const": "Datadog"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}