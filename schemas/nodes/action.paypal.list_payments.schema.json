{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.paypal.list_payments.schema.json",
  "title": "PayPal - List Payments",
  "description": "List payments with optional filtering",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.paypal.list_payments",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "count": {
          "type": "number",
          "minimum": 1,
          "maximum": 20,
          "default": 10,
          "description": "Number of payments to return"
        },
        "start_id": {
          "type": "string",
          "description": "Starting payment ID for pagination"
        },
        "start_index": {
          "type": "number",
          "description": "Starting index for pagination"
        },
        "start_time": {
          "type": "string",
          "format": "date-time",
          "description": "Start time filter (RFC 3339)"
        },
        "end_time": {
          "type": "string",
          "format": "date-time",
          "description": "End time filter (RFC 3339)"
        },
        "sort_by": {
          "type": "string",
          "enum": [
            "create_time",
            "update_time"
          ],
          "description": "Sort field"
        },
        "sort_order": {
          "type": "string",
          "enum": [
            "asc",
            "desc"
          ],
          "description": "Sort order"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Payments"
        },
        "appName": {
          "type": "string",
          "const": "PayPal"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}