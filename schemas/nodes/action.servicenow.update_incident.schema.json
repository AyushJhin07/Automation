{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.servicenow.update_incident.schema.json",
  "title": "ServiceNow - Update Incident",
  "description": "Update an existing incident",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.servicenow.update_incident",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "sys_id": {
          "type": "string",
          "description": "Incident sys_id"
        },
        "short_description": {
          "type": "string",
          "description": "Short description"
        },
        "description": {
          "type": "string",
          "description": "Detailed description"
        },
        "state": {
          "type": "string",
          "enum": [
            "1",
            "2",
            "3",
            "6",
            "7",
            "8"
          ],
          "description": "Incident state"
        },
        "priority": {
          "type": "string",
          "enum": [
            "1",
            "2",
            "3",
            "4",
            "5"
          ],
          "description": "Priority level"
        },
        "assignment_group": {
          "type": "string",
          "description": "Assignment group"
        },
        "assigned_to": {
          "type": "string",
          "description": "Assigned user"
        },
        "work_notes": {
          "type": "string",
          "description": "Work notes"
        },
        "close_code": {
          "type": "string",
          "description": "Close code"
        },
        "close_notes": {
          "type": "string",
          "description": "Close notes"
        }
      },
      "required": [
        "sys_id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "IT Service Management"
        },
        "appName": {
          "type": "string",
          "const": "ServiceNow"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}