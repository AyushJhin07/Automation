{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.workday.update_compensation.schema.json",
  "title": "Workday - Update Compensation",
  "description": "Update worker compensation",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.workday.update_compensation",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "workerId": {
          "type": "string",
          "description": "Worker ID"
        },
        "baseSalary": {
          "type": "number",
          "minimum": 0,
          "description": "New base salary"
        },
        "currency": {
          "type": "string",
          "description": "Currency code"
        },
        "effectiveDate": {
          "type": "string",
          "format": "date",
          "description": "Effective date for compensation change"
        },
        "reason": {
          "type": "string",
          "enum": [
            "Merit Increase",
            "Promotion",
            "Market Adjustment",
            "Cost of Living",
            "Other"
          ],
          "description": "Reason for compensation change"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes"
        }
      },
      "required": [
        "workerId",
        "baseSalary",
        "effectiveDate",
        "reason"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "HR"
        },
        "appName": {
          "type": "string",
          "const": "Workday"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}