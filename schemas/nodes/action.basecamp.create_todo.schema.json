{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.basecamp.create_todo.schema.json",
  "title": "Basecamp - Create To-do",
  "description": "Create a new to-do item",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.basecamp.create_todo",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "accountId": {
          "type": "string",
          "description": "Account ID"
        },
        "projectId": {
          "type": "string",
          "description": "Project ID"
        },
        "todoListId": {
          "type": "string",
          "description": "To-do list ID"
        },
        "content": {
          "type": "string",
          "description": "To-do content"
        },
        "description": {
          "type": "string",
          "description": "To-do description"
        },
        "assignee_ids": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Assignee IDs"
        },
        "due_on": {
          "type": "string",
          "format": "date",
          "description": "Due date"
        }
      },
      "required": [
        "accountId",
        "projectId",
        "todoListId",
        "content"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Project Management"
        },
        "appName": {
          "type": "string",
          "const": "Basecamp"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}