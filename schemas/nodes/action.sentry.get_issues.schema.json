{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.sentry.get_issues.schema.json",
  "title": "Sentry - Get Issues",
  "description": "Get list of issues in a project",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.sentry.get_issues",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "organizationSlug": {
          "type": "string",
          "description": "Organization slug"
        },
        "projectSlug": {
          "type": "string",
          "description": "Project slug"
        },
        "statsPeriod": {
          "type": "string",
          "enum": [
            "14d",
            "24h"
          ],
          "description": "Statistics period"
        },
        "shortIdLookup": {
          "type": "boolean",
          "description": "Enable short ID lookup"
        },
        "query": {
          "type": "string",
          "description": "Search query"
        },
        "sort": {
          "type": "string",
          "enum": [
            "date",
            "new",
            "priority",
            "freq",
            "user"
          ],
          "description": "Sort order"
        },
        "cursor": {
          "type": "string",
          "description": "Pagination cursor"
        }
      },
      "required": [
        "organizationSlug",
        "projectSlug"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Monitoring"
        },
        "appName": {
          "type": "string",
          "const": "Sentry"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}