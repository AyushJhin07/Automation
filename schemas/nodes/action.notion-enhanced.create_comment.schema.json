{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.notion-enhanced.create_comment.schema.json",
  "title": "Notion Enhanced - Create Comment",
  "description": "Create a comment on a page or block",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.notion-enhanced.create_comment",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "parent": {
          "type": "object",
          "properties": {
            "page_id": {
              "type": "string"
            },
            "block_id": {
              "type": "string"
            }
          },
          "description": "Parent page or block"
        },
        "rich_text": {
          "type": "array",
          "description": "Comment content as rich text"
        },
        "discussion_id": {
          "type": "string",
          "description": "Discussion thread ID"
        }
      },
      "required": [
        "parent",
        "rich_text"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Productivity"
        },
        "appName": {
          "type": "string",
          "const": "Notion Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}