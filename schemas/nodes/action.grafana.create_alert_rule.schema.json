{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.grafana.create_alert_rule.schema.json",
  "title": "Grafana - Create Alert Rule",
  "description": "Create a new alert rule",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.grafana.create_alert_rule",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Alert rule title"
        },
        "condition": {
          "type": "string",
          "description": "Alert condition query"
        },
        "folder_uid": {
          "type": "string",
          "description": "Folder UID"
        },
        "interval_seconds": {
          "type": "number",
          "default": 60,
          "description": "Evaluation interval in seconds"
        },
        "no_data_state": {
          "type": "string",
          "enum": [
            "NoData",
            "Alerting",
            "OK"
          ],
          "default": "NoData",
          "description": "State when no data"
        }
      },
      "required": [
        "title",
        "condition"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "DevOps"
        },
        "appName": {
          "type": "string",
          "const": "Grafana"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}