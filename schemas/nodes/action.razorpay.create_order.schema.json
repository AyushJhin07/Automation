{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.razorpay.create_order.schema.json",
  "title": "Razorpay - Create Order",
  "description": "Create a new order",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.razorpay.create_order",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "number",
          "minimum": 100,
          "description": "Amount in smallest currency unit (e.g., paise)"
        },
        "currency": {
          "type": "string",
          "default": "INR",
          "description": "Currency code"
        },
        "receipt": {
          "type": "string",
          "description": "Receipt identifier"
        },
        "notes": {
          "type": "object",
          "description": "Additional notes"
        }
      },
      "required": [
        "amount"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Payments"
        },
        "appName": {
          "type": "string",
          "const": "Razorpay"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}