{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/trigger.sentry.issue_created.schema.json",
  "title": "Sentry - Issue Created",
  "description": "Triggered when a new issue is created",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "trigger.sentry.issue_created",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "organizationSlug": {
          "type": "string",
          "description": "Filter by organization slug"
        },
        "projectSlug": {
          "type": "string",
          "description": "Filter by project slug"
        },
        "level": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info",
            "debug"
          ],
          "description": "Filter by issue level"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Monitoring"
        },
        "appName": {
          "type": "string",
          "const": "Sentry"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "outputSchema": {
          "type": "object",
          "description": "Schema for trigger output data",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}