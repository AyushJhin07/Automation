{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.sharepoint.create_file.schema.json",
  "title": "SharePoint - Create File",
  "description": "Create a file in SharePoint",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.sharepoint.create_file",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "siteId": {
          "description": "Site ID",
          "type": "string"
        },
        "driveId": {
          "description": "Drive ID",
          "type": "string"
        },
        "path": {
          "description": "File path",
          "type": "string"
        },
        "base64": {
          "description": "Base64 file content",
          "type": "string"
        }
      },
      "required": [
        "siteId",
        "driveId",
        "path",
        "base64"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Collaboration"
        },
        "appName": {
          "type": "string",
          "const": "SharePoint"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "Sites.ReadWrite.All"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}