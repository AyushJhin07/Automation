{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.sharepoint.create_file.schema.json",
  "title": "SharePoint - Create File",
  "description": "Create a new file in SharePoint",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.sharepoint.create_file",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "siteId": {
          "type": "string",
          "description": "SharePoint site ID"
        },
        "driveId": {
          "type": "string",
          "description": "Drive ID (document library)"
        },
        "folderPath": {
          "type": "string",
          "description": "Folder path (e.g., /Documents/Projects)"
        },
        "fileName": {
          "type": "string",
          "description": "File name with extension"
        },
        "content": {
          "type": "string",
          "description": "File content (base64 encoded for binary files)"
        },
        "conflictBehavior": {
          "type": "string",
          "enum": [
            "fail",
            "replace",
            "rename"
          ],
          "default": "fail",
          "description": "What to do if file already exists"
        }
      },
      "required": [
        "siteId",
        "fileName",
        "content"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "File Storage"
        },
        "appName": {
          "type": "string",
          "const": "SharePoint"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}