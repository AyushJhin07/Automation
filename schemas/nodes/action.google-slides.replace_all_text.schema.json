{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.google-slides.replace_all_text.schema.json",
  "title": "Google Slides - Replace All Text",
  "description": "Replace all instances of text",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.google-slides.replace_all_text",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "presentationId": {
          "type": "string",
          "description": "Presentation ID"
        },
        "containsText": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            },
            "matchCase": {
              "type": "boolean",
              "default": false
            }
          },
          "description": "Text to find and replace"
        },
        "replaceText": {
          "type": "string",
          "description": "Replacement text"
        },
        "pageObjectIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Limit replacement to specific slides"
        }
      },
      "required": [
        "presentationId",
        "containsText",
        "replaceText"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Productivity"
        },
        "appName": {
          "type": "string",
          "const": "Google Slides"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}