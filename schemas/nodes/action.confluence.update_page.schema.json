{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.confluence.update_page.schema.json",
  "title": "Confluence - Update Page",
  "description": "Update an existing Confluence page",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.confluence.update_page",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "page_id": {
          "description": "Page ID",
          "type": "string"
        },
        "title": {
          "description": "Updated page title",
          "type": "string"
        },
        "content": {
          "description": "Updated page content",
          "type": "string"
        },
        "version_number": {
          "description": "Current version number",
          "type": "number"
        }
      },
      "required": [
        "page_id",
        "version_number"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Collaboration"
        },
        "appName": {
          "type": "string",
          "const": "Confluence"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "write:confluence-content"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}