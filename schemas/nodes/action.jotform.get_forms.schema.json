{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.jotform.get_forms.schema.json",
  "title": "JotForm - Get Forms",
  "description": "Get user's forms",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.jotform.get_forms",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "offset": {
          "type": "number",
          "minimum": 0,
          "default": 0,
          "description": "Start position for results"
        },
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 1000,
          "default": 20,
          "description": "Number of forms to return"
        },
        "orderby": {
          "type": "string",
          "enum": [
            "id",
            "username",
            "title",
            "status",
            "created_at",
            "updated_at",
            "count"
          ],
          "description": "Field to order by"
        },
        "filter": {
          "type": "object",
          "description": "Filter parameters"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Forms"
        },
        "appName": {
          "type": "string",
          "const": "JotForm"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}