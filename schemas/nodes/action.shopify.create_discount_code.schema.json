{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.shopify.create_discount_code.schema.json",
  "title": "Shopify - Create Discount Code",
  "description": "Create a discount code",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.shopify.create_discount_code",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "code": {
          "description": "Discount code",
          "type": "string"
        },
        "value": {
          "description": "Discount value",
          "type": "number"
        },
        "value_type": {
          "description": "Value type",
          "type": "string",
          "enum": [
            "percentage",
            "fixed_amount"
          ]
        },
        "usage_limit": {
          "description": "Usage limit",
          "type": "number"
        }
      },
      "required": [
        "code",
        "value",
        "value_type"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "ecommerce"
        },
        "appName": {
          "type": "string",
          "const": "Shopify"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "write_price_rules"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}