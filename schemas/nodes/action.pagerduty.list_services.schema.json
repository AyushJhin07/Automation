{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.pagerduty.list_services.schema.json",
  "title": "PagerDuty - List Services",
  "description": "List services",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.pagerduty.list_services",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 100,
          "default": 25
        },
        "offset": {
          "type": "number",
          "minimum": 0,
          "default": 0
        },
        "total": {
          "type": "boolean"
        },
        "team_ids": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "time_zone": {
          "type": "string"
        },
        "sort_by": {
          "type": "string",
          "enum": [
            "name:asc",
            "name:desc",
            "created_at:asc",
            "created_at:desc"
          ]
        },
        "query": {
          "type": "string",
          "description": "Search query"
        },
        "include": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Monitoring"
        },
        "appName": {
          "type": "string",
          "const": "PagerDuty"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}