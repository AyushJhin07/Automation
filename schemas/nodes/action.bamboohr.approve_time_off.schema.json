{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.bamboohr.approve_time_off.schema.json",
  "title": "BambooHR - Approve Time Off",
  "description": "Approve a time off request",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.bamboohr.approve_time_off",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "requestId": {
          "description": "Time off request ID",
          "type": "string"
        },
        "status": {
          "description": "Approval status",
          "type": "string",
          "enum": [
            "approved",
            "denied"
          ]
        },
        "note": {
          "description": "Approval note",
          "type": "string"
        }
      },
      "required": [
        "requestId",
        "status"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "HR Management"
        },
        "appName": {
          "type": "string",
          "const": "BambooHR"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "time_off:write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}