{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.quickbooks.query_customers.schema.json",
  "title": "QuickBooks - Query Customers",
  "description": "Query customers with SQL-like syntax",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.quickbooks.query_customers",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "companyId": {
          "type": "string",
          "description": "Company ID"
        },
        "query": {
          "type": "string",
          "description": "SQL-like query string"
        },
        "maxResults": {
          "type": "number",
          "minimum": 1,
          "maximum": 1000,
          "default": 20,
          "description": "Maximum number of results"
        },
        "startPosition": {
          "type": "number",
          "minimum": 1,
          "default": 1,
          "description": "Start position for pagination"
        }
      },
      "required": [
        "companyId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Accounting"
        },
        "appName": {
          "type": "string",
          "const": "QuickBooks"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}