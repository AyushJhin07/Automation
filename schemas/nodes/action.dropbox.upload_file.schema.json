{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.dropbox.upload_file.schema.json",
  "title": "Dropbox - Upload File",
  "description": "Upload file to Dropbox",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.dropbox.upload_file",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "path": {
          "description": "File path in Dropbox",
          "type": "string"
        },
        "content": {
          "description": "File content (base64 encoded)",
          "type": "string"
        },
        "mode": {
          "description": "Upload mode",
          "type": "string",
          "enum": [
            "add",
            "overwrite",
            "update"
          ],
          "default": "add"
        }
      },
      "required": [
        "path",
        "content"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "storage"
        },
        "appName": {
          "type": "string",
          "const": "Dropbox"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "files.content.write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}