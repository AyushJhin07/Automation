{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.gmail.watch_inbox.schema.json",
  "title": "Gmail - Watch Inbox",
  "description": "Set up inbox watching for real-time notifications",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.gmail.watch_inbox",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "topicName": {
          "description": "Pub/Sub topic name",
          "type": "string"
        },
        "labelIds": {
          "description": "Label IDs to watch",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "topicName"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "communication"
        },
        "appName": {
          "type": "string",
          "const": "Gmail"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "https://www.googleapis.com/auth/gmail.modify"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}