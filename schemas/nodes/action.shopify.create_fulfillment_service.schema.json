{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.shopify.create_fulfillment_service.schema.json",
  "title": "Shopify - Create Fulfillment Service",
  "description": "Create a new fulfillment service",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.shopify.create_fulfillment_service",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Fulfillment service name",
          "type": "string"
        },
        "callbackUrl": {
          "description": "Callback URL for notifications",
          "type": "string"
        },
        "inventoryManagement": {
          "description": "Whether service manages inventory",
          "type": "boolean",
          "default": false
        },
        "trackingSupport": {
          "description": "Whether service supports tracking",
          "type": "boolean",
          "default": false
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "ecommerce"
        },
        "appName": {
          "type": "string",
          "const": "Shopify"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "write_fulfillment_services"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}