{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.airtable.update_record.schema.json",
  "title": "Airtable - Update Record",
  "description": "Update existing record",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.airtable.update_record",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "baseId": {
          "description": "Base ID",
          "type": "string"
        },
        "tableId": {
          "description": "Table ID",
          "type": "string"
        },
        "recordId": {
          "description": "Record ID",
          "type": "string"
        },
        "fields": {
          "description": "Updated fields",
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "baseId",
        "tableId",
        "recordId",
        "fields"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "database"
        },
        "appName": {
          "type": "string",
          "const": "Airtable"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "data:write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}