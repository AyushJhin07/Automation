{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.onedrive.share_file.schema.json",
  "title": "OneDrive - Share File",
  "description": "Create a sharing link for a file",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.onedrive.share_file",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "itemId": {
          "type": "string",
          "description": "File or folder ID"
        },
        "type": {
          "type": "string",
          "enum": [
            "view",
            "edit"
          ],
          "default": "view",
          "description": "Permission type"
        },
        "scope": {
          "type": "string",
          "enum": [
            "anonymous",
            "organization"
          ],
          "default": "anonymous",
          "description": "Link scope"
        }
      },
      "required": [
        "itemId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Storage"
        },
        "appName": {
          "type": "string",
          "const": "OneDrive"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}