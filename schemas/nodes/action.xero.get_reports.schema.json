{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.xero.get_reports.schema.json",
  "title": "Xero - Get Reports",
  "description": "Get financial reports",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.xero.get_reports",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "reportId": {
          "type": "string",
          "enum": [
            "BalanceSheet",
            "ProfitAndLoss",
            "TrialBalance",
            "CashSummary",
            "ExecutiveSummary",
            "BankSummary",
            "AgedReceivablesByContact",
            "AgedPayablesByContact"
          ],
          "description": "Report type"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "Report date"
        },
        "fromDate": {
          "type": "string",
          "format": "date",
          "description": "Start date for period reports"
        },
        "toDate": {
          "type": "string",
          "format": "date",
          "description": "End date for period reports"
        },
        "periods": {
          "type": "number",
          "minimum": 1,
          "description": "Number of periods"
        },
        "timeframe": {
          "type": "string",
          "enum": [
            "MONTH",
            "QUARTER",
            "YEAR"
          ],
          "description": "Timeframe for period reports"
        }
      },
      "required": [
        "reportId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Accounting"
        },
        "appName": {
          "type": "string",
          "const": "Xero"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}