{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.google-drive.share_file.schema.json",
  "title": "Google Drive - Share File",
  "description": "Share a file with a user",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.google-drive.share_file",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "fileId": {
          "description": "ID of the file to share",
          "type": "string"
        },
        "email": {
          "description": "Email address of the user to share with",
          "type": "string"
        },
        "role": {
          "description": "Role to assign",
          "type": "string",
          "enum": [
            "reader",
            "writer",
            "commenter",
            "owner"
          ]
        }
      },
      "required": [
        "fileId",
        "email",
        "role"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Cloud Storage"
        },
        "appName": {
          "type": "string",
          "const": "Google Drive"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "https://www.googleapis.com/auth/drive"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}