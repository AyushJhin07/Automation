{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.brex.list_transactions.schema.json",
  "title": "Brex - List Transactions",
  "description": "List card transactions",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.brex.list_transactions",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "card_id": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Filter by card IDs"
        },
        "user_id": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Filter by user IDs"
        },
        "posted_at_start": {
          "type": "string",
          "format": "date-time",
          "description": "Posted after this date"
        },
        "posted_at_end": {
          "type": "string",
          "format": "date-time",
          "description": "Posted before this date"
        },
        "expand": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "card",
              "receipt",
              "merchant"
            ]
          },
          "description": "Additional data to expand"
        },
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 100,
          "default": 100,
          "description": "Number of transactions to return"
        },
        "cursor": {
          "type": "string",
          "description": "Pagination cursor"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Finance"
        },
        "appName": {
          "type": "string",
          "const": "Brex"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}