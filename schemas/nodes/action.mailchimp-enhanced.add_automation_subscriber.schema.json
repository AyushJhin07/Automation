{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.mailchimp-enhanced.add_automation_subscriber.schema.json",
  "title": "Mailchimp Enhanced - Add Automation Subscriber",
  "description": "Add a subscriber to an automation workflow",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.mailchimp-enhanced.add_automation_subscriber",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "workflow_id": {
          "type": "string",
          "description": "Automation workflow ID"
        },
        "email_address": {
          "type": "string",
          "format": "email",
          "description": "Subscriber email address"
        }
      },
      "required": [
        "workflow_id",
        "email_address"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Marketing"
        },
        "appName": {
          "type": "string",
          "const": "Mailchimp Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}