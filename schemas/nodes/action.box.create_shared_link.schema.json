{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.box.create_shared_link.schema.json",
  "title": "Box - Create Shared Link",
  "description": "Create a shared link for a file or folder",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.box.create_shared_link",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "item_id": {
          "type": "string",
          "description": "File or folder ID"
        },
        "item_type": {
          "type": "string",
          "enum": [
            "file",
            "folder"
          ],
          "description": "Item type"
        },
        "access": {
          "type": "string",
          "enum": [
            "open",
            "company",
            "collaborators"
          ],
          "description": "Access level"
        },
        "password": {
          "type": "string",
          "description": "Password protection"
        },
        "unshared_at": {
          "type": "string",
          "format": "date-time",
          "description": "Expiration date"
        },
        "can_download": {
          "type": "boolean",
          "description": "Allow downloads"
        },
        "can_preview": {
          "type": "boolean",
          "description": "Allow previews"
        }
      },
      "required": [
        "item_id",
        "item_type"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Storage"
        },
        "appName": {
          "type": "string",
          "const": "Box"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}