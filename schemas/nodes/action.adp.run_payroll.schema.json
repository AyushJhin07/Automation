{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.adp.run_payroll.schema.json",
  "title": "ADP - Run Payroll",
  "description": "Execute payroll processing",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.adp.run_payroll",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "payrollGroupId": {
          "description": "Payroll group ID",
          "type": "string"
        },
        "payPeriodStart": {
          "description": "Pay period start date",
          "type": "string"
        },
        "payPeriodEnd": {
          "description": "Pay period end date",
          "type": "string"
        }
      },
      "required": [
        "payrollGroupId",
        "payPeriodStart",
        "payPeriodEnd"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "HR Management"
        },
        "appName": {
          "type": "string",
          "const": "ADP"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "payroll_write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}