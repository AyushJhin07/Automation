{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.zoho-books.record_payment.schema.json",
  "title": "Zoho Books - Record Payment",
  "description": "Record a payment for an invoice",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.zoho-books.record_payment",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "customerId": {
          "type": "string",
          "description": "Customer ID"
        },
        "paymentMode": {
          "type": "string",
          "description": "Payment mode"
        },
        "amount": {
          "type": "number",
          "minimum": 0,
          "description": "Payment amount"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "Payment date"
        },
        "referenceNumber": {
          "type": "string",
          "description": "Reference number"
        },
        "description": {
          "type": "string",
          "description": "Payment description"
        },
        "invoices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "invoiceId": {
                "type": "string"
              },
              "amountApplied": {
                "type": "number",
                "minimum": 0
              }
            },
            "required": [
              "invoiceId",
              "amountApplied"
            ]
          },
          "description": "Invoices to apply payment to"
        },
        "exchangeRate": {
          "type": "number",
          "minimum": 0,
          "description": "Exchange rate"
        }
      },
      "required": [
        "customerId",
        "paymentMode",
        "amount",
        "date",
        "invoices"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Accounting"
        },
        "appName": {
          "type": "string",
          "const": "Zoho Books"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}