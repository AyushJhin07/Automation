{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.caldotcom.update_booking.schema.json",
  "title": "Cal.com - Update Booking",
  "description": "Update an existing booking",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.caldotcom.update_booking",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "Booking ID"
        },
        "title": {
          "type": "string",
          "description": "Booking title"
        },
        "description": {
          "type": "string",
          "description": "Booking description"
        },
        "start": {
          "type": "string",
          "format": "date-time",
          "description": "New start time"
        },
        "end": {
          "type": "string",
          "format": "date-time",
          "description": "New end time"
        },
        "status": {
          "type": "string",
          "enum": [
            "accepted",
            "pending",
            "cancelled",
            "rejected"
          ],
          "description": "Booking status"
        }
      },
      "required": [
        "id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Scheduling"
        },
        "appName": {
          "type": "string",
          "const": "Cal.com"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}