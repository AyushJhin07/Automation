{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.razorpay.create_refund.schema.json",
  "title": "Razorpay - Create Refund",
  "description": "Create a refund",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.razorpay.create_refund",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "payment_id": {
          "type": "string",
          "description": "Payment ID"
        },
        "amount": {
          "type": "number",
          "minimum": 100,
          "description": "Amount to refund"
        },
        "speed": {
          "type": "string",
          "enum": [
            "normal",
            "optimum"
          ],
          "default": "normal",
          "description": "Refund speed"
        },
        "notes": {
          "type": "object",
          "description": "Additional notes"
        },
        "receipt": {
          "type": "string",
          "description": "Receipt identifier"
        }
      },
      "required": [
        "payment_id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Payments"
        },
        "appName": {
          "type": "string",
          "const": "Razorpay"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}