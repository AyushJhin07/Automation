{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.slack.upload_file.schema.json",
  "title": "Slack - Upload File",
  "description": "Upload a file to a Slack channel",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.slack.upload_file",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "channels": {
          "type": "string",
          "description": "Channel IDs to share the file to"
        },
        "content": {
          "type": "string",
          "description": "File content"
        },
        "filename": {
          "type": "string",
          "description": "Name of the file"
        },
        "filetype": {
          "type": "string",
          "description": "File type/extension"
        },
        "initial_comment": {
          "type": "string",
          "description": "Comment to add with the file"
        },
        "title": {
          "type": "string",
          "description": "Title of the file"
        }
      },
      "required": [
        "content",
        "filename"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Communication"
        },
        "appName": {
          "type": "string",
          "const": "Slack"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}