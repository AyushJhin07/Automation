{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.slack.upload_file.schema.json",
  "title": "Slack - Upload File",
  "description": "Upload a file to Slack",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.slack.upload_file",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "channels": {
          "description": "Comma-separated list of channel IDs",
          "type": "string"
        },
        "content": {
          "description": "File content as text",
          "type": "string"
        },
        "filename": {
          "description": "Filename for the upload",
          "type": "string"
        },
        "title": {
          "description": "Title of the file",
          "type": "string"
        },
        "initial_comment": {
          "description": "Initial comment for the file",
          "type": "string"
        }
      },
      "required": [
        "channels"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Communication"
        },
        "appName": {
          "type": "string",
          "const": "Slack"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "files:write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}