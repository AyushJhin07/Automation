{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.airtable-enhanced.upsert_record.schema.json",
  "title": "Airtable Enhanced - Upsert Record",
  "description": "Create or update a record based on a key field",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.airtable-enhanced.upsert_record",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "baseId": {
          "description": "Base ID",
          "type": "string"
        },
        "table": {
          "description": "Table name",
          "type": "string"
        },
        "keyField": {
          "description": "Field to use as key",
          "type": "string"
        },
        "fields": {
          "description": "Record fields",
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "baseId",
        "table",
        "keyField",
        "fields"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Database"
        },
        "appName": {
          "type": "string",
          "const": "Airtable Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}