{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.surveymonkey.update_survey.schema.json",
  "title": "SurveyMonkey - Update Survey",
  "description": "Update survey details",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.surveymonkey.update_survey",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "survey_id": {
          "type": "string",
          "description": "Survey ID"
        },
        "title": {
          "type": "string",
          "description": "Survey title"
        },
        "nickname": {
          "type": "string",
          "description": "Survey nickname"
        },
        "language": {
          "type": "string",
          "description": "Survey language code"
        },
        "footer": {
          "type": "boolean",
          "description": "Whether to show footer"
        },
        "folder_id": {
          "type": "string",
          "description": "Folder ID to move survey to"
        }
      },
      "required": [
        "survey_id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Customer Feedback"
        },
        "appName": {
          "type": "string",
          "const": "SurveyMonkey"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}