{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.google-drive.upload_base64.schema.json",
  "title": "Google Drive - Upload Base64 File",
  "description": "Upload a file from base64 content",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.google-drive.upload_base64",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the file",
          "type": "string"
        },
        "folderId": {
          "description": "ID of the destination folder",
          "type": "string"
        },
        "mimeType": {
          "description": "MIME type of the file",
          "type": "string"
        },
        "base64": {
          "description": "Base64-encoded file content",
          "type": "string"
        }
      },
      "required": [
        "name",
        "folderId",
        "mimeType",
        "base64"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Cloud Storage"
        },
        "appName": {
          "type": "string",
          "const": "Google Drive"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "https://www.googleapis.com/auth/drive.file"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}