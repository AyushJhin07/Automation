{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.notion.create_page.schema.json",
  "title": "Notion - Create Page",
  "description": "Create new Notion page",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.notion.create_page",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "parent": {
          "description": "Parent page or database",
          "type": "object",
          "additionalProperties": true
        },
        "properties": {
          "description": "Page properties",
          "type": "object",
          "additionalProperties": true
        },
        "children": {
          "description": "Page content blocks",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "parent",
        "properties"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "productivity"
        },
        "appName": {
          "type": "string",
          "const": "Notion"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}