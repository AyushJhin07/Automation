{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.notion.create_page.schema.json",
  "title": "Notion - Create Page",
  "description": "Create a new page in Notion",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.notion.create_page",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "parent": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "database_id",
                "page_id",
                "workspace"
              ],
              "description": "Type of parent"
            },
            "database_id": {
              "type": "string",
              "description": "Database ID (if parent type is database_id)"
            },
            "page_id": {
              "type": "string",
              "description": "Page ID (if parent type is page_id)"
            }
          },
          "description": "Parent page, database, or workspace"
        },
        "properties": {
          "type": "object",
          "description": "Page properties (varies by database schema)"
        },
        "children": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "description": "Array of block objects for page content"
        },
        "icon": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "emoji",
                "external",
                "file"
              ]
            },
            "emoji": {
              "type": "string"
            },
            "external": {
              "type": "object"
            },
            "file": {
              "type": "object"
            }
          },
          "description": "Page icon"
        },
        "cover": {
          "type": "object",
          "description": "Page cover image"
        }
      },
      "required": [
        "parent"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Productivity"
        },
        "appName": {
          "type": "string",
          "const": "Notion"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}