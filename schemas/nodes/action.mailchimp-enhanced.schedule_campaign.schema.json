{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.mailchimp-enhanced.schedule_campaign.schema.json",
  "title": "Mailchimp Enhanced - Schedule Campaign",
  "description": "Schedule a campaign to be sent",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.mailchimp-enhanced.schedule_campaign",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "campaign_id": {
          "type": "string",
          "description": "Campaign ID"
        },
        "schedule_time": {
          "type": "string",
          "format": "date-time",
          "description": "When to send the campaign (ISO 8601)"
        },
        "timewarp": {
          "type": "boolean",
          "description": "Whether to use timewarp"
        },
        "batch_delivery": {
          "type": "object",
          "properties": {
            "batch_delay": {
              "type": "number"
            },
            "batch_count": {
              "type": "number"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "campaign_id",
        "schedule_time"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Marketing"
        },
        "appName": {
          "type": "string",
          "const": "Mailchimp Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}