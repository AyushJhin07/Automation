{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.salesforce.create_opportunity.schema.json",
  "title": "Salesforce - Create Opportunity",
  "description": "Create a new sales opportunity",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.salesforce.create_opportunity",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Opportunity name",
          "type": "string"
        },
        "accountId": {
          "description": "Account ID",
          "type": "string"
        },
        "amount": {
          "description": "Opportunity amount",
          "type": "number"
        },
        "closeDate": {
          "description": "Expected close date",
          "type": "string"
        },
        "stageName": {
          "description": "Sales stage",
          "type": "string"
        }
      },
      "required": [
        "name",
        "accountId",
        "closeDate",
        "stageName"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "crm"
        },
        "appName": {
          "type": "string",
          "const": "Salesforce"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "api"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}