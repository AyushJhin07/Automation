{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.brex.create_card.schema.json",
  "title": "Brex - Create Card",
  "description": "Create a new card",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.brex.create_card",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "owner": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "USER"
              ]
            },
            "user_id": {
              "type": "string"
            }
          },
          "description": "Card owner"
        },
        "card_name": {
          "type": "string",
          "description": "Card nickname"
        },
        "card_type": {
          "type": "string",
          "enum": [
            "VIRTUAL",
            "PHYSICAL"
          ],
          "description": "Card type"
        },
        "limit_type": {
          "type": "string",
          "enum": [
            "CARD",
            "MONTHLY"
          ],
          "description": "Limit type"
        },
        "spending_controls": {
          "type": "object",
          "properties": {
            "spend_limit": {
              "type": "object"
            },
            "locked": {
              "type": "boolean"
            }
          },
          "description": "Spending controls"
        },
        "metadata": {
          "type": "object",
          "description": "Card metadata"
        }
      },
      "required": [
        "owner",
        "card_type"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Finance"
        },
        "appName": {
          "type": "string",
          "const": "Brex"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}