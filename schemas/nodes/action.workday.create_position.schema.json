{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.workday.create_position.schema.json",
  "title": "Workday - Create Position",
  "description": "Create a new position",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.workday.create_position",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "positionTitle": {
          "description": "Position title",
          "type": "string"
        },
        "department": {
          "description": "Department",
          "type": "string"
        },
        "jobProfile": {
          "description": "Job profile",
          "type": "string"
        }
      },
      "required": [
        "positionTitle",
        "department",
        "jobProfile"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "HR Management"
        },
        "appName": {
          "type": "string",
          "const": "Workday"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "staffing"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}