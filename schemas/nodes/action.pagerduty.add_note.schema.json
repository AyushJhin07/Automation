{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.pagerduty.add_note.schema.json",
  "title": "PagerDuty - Add Note",
  "description": "Add a note to an incident",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.pagerduty.add_note",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "incident_id": {
          "description": "Incident ID",
          "type": "string"
        },
        "content": {
          "description": "Note content",
          "type": "string"
        },
        "from": {
          "description": "Email of user adding note",
          "type": "string"
        }
      },
      "required": [
        "incident_id",
        "content",
        "from"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Incident Management"
        },
        "appName": {
          "type": "string",
          "const": "PagerDuty"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "incidents:write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}