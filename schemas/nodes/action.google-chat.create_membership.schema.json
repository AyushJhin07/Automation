{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.google-chat.create_membership.schema.json",
  "title": "Google Chat - Create Membership",
  "description": "Add a member to a space",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.google-chat.create_membership",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "parent": {
          "type": "string",
          "description": "Space name (spaces/AAABBBCCC)"
        },
        "member": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "displayName": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "HUMAN",
                "BOT"
              ]
            }
          },
          "description": "Member to add"
        },
        "role": {
          "type": "string",
          "enum": [
            "ROLE_MEMBER",
            "ROLE_MANAGER"
          ],
          "default": "ROLE_MEMBER",
          "description": "Member role"
        }
      },
      "required": [
        "parent",
        "member"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Communication"
        },
        "appName": {
          "type": "string",
          "const": "Google Chat"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}