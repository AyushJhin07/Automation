{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.intercom.create_conversation.schema.json",
  "title": "Intercom - Create Conversation",
  "description": "Create a new conversation",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.intercom.create_conversation",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "from": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "user",
                "contact"
              ]
            },
            "id": {
              "type": "string"
            }
          },
          "description": "Conversation initiator"
        },
        "body": {
          "type": "string",
          "description": "Message body"
        },
        "subject": {
          "type": "string",
          "description": "Conversation subject"
        },
        "message_type": {
          "type": "string",
          "enum": [
            "email",
            "inapp",
            "facebook",
            "twitter"
          ],
          "default": "email",
          "description": "Message type"
        }
      },
      "required": [
        "from",
        "body"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Customer Support"
        },
        "appName": {
          "type": "string",
          "const": "Intercom"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}