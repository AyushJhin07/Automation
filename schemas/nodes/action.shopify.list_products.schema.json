{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.shopify.list_products.schema.json",
  "title": "Shopify - List Products",
  "description": "Retrieve a list of products",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.shopify.list_products",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "limit": {
          "type": "number",
          "default": 50,
          "maximum": 250,
          "description": "Number of products to retrieve"
        },
        "published_status": {
          "type": "string",
          "enum": [
            "published",
            "unpublished",
            "any"
          ],
          "default": "any",
          "description": "Filter by published status"
        },
        "vendor": {
          "type": "string",
          "description": "Filter by vendor"
        },
        "product_type": {
          "type": "string",
          "description": "Filter by product type"
        },
        "collection_id": {
          "type": "string",
          "description": "Filter by collection ID"
        },
        "created_at_min": {
          "type": "string",
          "format": "date-time",
          "description": "Filter by minimum creation date"
        },
        "created_at_max": {
          "type": "string",
          "format": "date-time",
          "description": "Filter by maximum creation date"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "ecommerce"
        },
        "appName": {
          "type": "string",
          "const": "Shopify"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}