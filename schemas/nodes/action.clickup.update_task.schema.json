{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.clickup.update_task.schema.json",
  "title": "ClickUp - Update Task",
  "description": "Update an existing task",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.clickup.update_task",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "task_id": {
          "type": "string",
          "description": "Task ID to update"
        },
        "name": {
          "type": "string",
          "description": "Task name"
        },
        "description": {
          "type": "string",
          "description": "Task description"
        },
        "status": {
          "type": "string",
          "description": "Task status"
        },
        "priority": {
          "type": "number",
          "enum": [
            1,
            2,
            3,
            4
          ],
          "description": "Task priority"
        },
        "assignees": {
          "type": "object",
          "properties": {
            "add": {
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            "rem": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          },
          "description": "Assignees to add or remove"
        },
        "due_date": {
          "type": "number",
          "description": "Due date as Unix timestamp"
        }
      },
      "required": [
        "task_id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Project Management"
        },
        "appName": {
          "type": "string",
          "const": "ClickUp"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}