{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.lever.create_opportunity.schema.json",
  "title": "Lever - Create Opportunity",
  "description": "Create a new candidate opportunity",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.lever.create_opportunity",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Candidate name",
          "type": "string"
        },
        "email": {
          "description": "Candidate email",
          "type": "string"
        },
        "phone": {
          "description": "Candidate phone",
          "type": "string"
        },
        "posting_id": {
          "description": "Job posting ID",
          "type": "string"
        }
      },
      "required": [
        "name",
        "email"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Recruitment"
        },
        "appName": {
          "type": "string",
          "const": "Lever"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "opportunities:write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}