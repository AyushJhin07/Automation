{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.box.list_folder_items.schema.json",
  "title": "Box - List Folder Items",
  "description": "List items in a folder",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.box.list_folder_items",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "folder_id": {
          "type": "string",
          "default": "0",
          "description": "Folder ID"
        },
        "fields": {
          "type": "string",
          "description": "Comma-separated list of fields"
        },
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 1000,
          "default": 100,
          "description": "Number of items to return"
        },
        "offset": {
          "type": "number",
          "description": "Starting point for pagination"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Storage"
        },
        "appName": {
          "type": "string",
          "const": "Box"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}