{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.snowflake.copy_into_table.schema.json",
  "title": "Snowflake - Copy Into Table",
  "description": "Load data into a Snowflake table",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.snowflake.copy_into_table",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "table_name": {
          "description": "Target table name",
          "type": "string"
        },
        "stage_location": {
          "description": "Stage location of files",
          "type": "string"
        },
        "file_format": {
          "description": "File format name",
          "type": "string"
        },
        "copy_options": {
          "description": "Additional copy options",
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "table_name",
        "stage_location"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Data Analytics"
        },
        "appName": {
          "type": "string",
          "const": "Snowflake"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "data:write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}