{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/trigger.shopify.order_created.schema.json",
  "title": "Shopify - Order Created",
  "description": "Trigger when new order is placed",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "trigger.shopify.order_created",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "status": {
          "description": "Filter by order status",
          "type": "string",
          "enum": [
            "open",
            "closed",
            "cancelled",
            "any"
          ],
          "default": "any"
        },
        "financial_status": {
          "description": "Filter by financial status",
          "type": "string",
          "enum": [
            "pending",
            "authorized",
            "paid",
            "refunded",
            "voided",
            "any"
          ],
          "default": "any"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "ecommerce"
        },
        "appName": {
          "type": "string",
          "const": "Shopify"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "read_orders"
          ]
        },
        "outputSchema": {
          "type": "object",
          "description": "Schema for trigger output data",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}