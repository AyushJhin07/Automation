{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.box.upload_file.schema.json",
  "title": "Box - Upload File",
  "description": "Upload a file to Box",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.box.upload_file",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "parent_id": {
          "type": "string",
          "default": "0",
          "description": "Parent folder ID (0 for root)"
        },
        "file_name": {
          "type": "string",
          "description": "File name"
        },
        "file_content": {
          "type": "string",
          "description": "File content or URL"
        },
        "content_created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Content creation date"
        },
        "content_modified_at": {
          "type": "string",
          "format": "date-time",
          "description": "Content modification date"
        }
      },
      "required": [
        "file_name",
        "file_content"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Storage"
        },
        "appName": {
          "type": "string",
          "const": "Box"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}