{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.sageintacct.create_invoice.schema.json",
  "title": "Sage Intacct - Create Invoice",
  "description": "Create a new invoice",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.sageintacct.create_invoice",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "customerid": {
          "type": "string",
          "description": "Customer ID"
        },
        "datecreated": {
          "type": "string",
          "format": "date",
          "description": "Invoice date"
        },
        "termname": {
          "type": "string",
          "description": "Payment terms"
        },
        "invoiceitems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "glaccountno": {
                "type": "string"
              },
              "amount": {
                "type": "number"
              },
              "memo": {
                "type": "string"
              },
              "locationid": {
                "type": "string"
              },
              "departmentid": {
                "type": "string"
              }
            },
            "required": [
              "glaccountno",
              "amount"
            ]
          },
          "description": "Invoice line items"
        },
        "description": {
          "type": "string",
          "description": "Invoice description"
        },
        "externalid": {
          "type": "string",
          "description": "External ID"
        }
      },
      "required": [
        "customerid",
        "datecreated",
        "invoiceitems"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Accounting"
        },
        "appName": {
          "type": "string",
          "const": "Sage Intacct"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}