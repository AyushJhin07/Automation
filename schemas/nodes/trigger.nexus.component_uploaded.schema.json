{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/trigger.nexus.component_uploaded.schema.json",
  "title": "Sonatype Nexus - Component Uploaded",
  "description": "Triggered when a new component is uploaded",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "trigger.nexus.component_uploaded",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Repository to monitor"
        },
        "format": {
          "type": "string",
          "enum": [
            "maven2",
            "npm",
            "docker",
            "pypi",
            "nuget"
          ],
          "description": "Filter by format"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "DevOps"
        },
        "appName": {
          "type": "string",
          "const": "Sonatype Nexus"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "outputSchema": {
          "type": "object",
          "description": "Schema for trigger output data",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}