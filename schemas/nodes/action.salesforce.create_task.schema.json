{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.salesforce.create_task.schema.json",
  "title": "Salesforce - Create Task",
  "description": "Create a new task",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.salesforce.create_task",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "subject": {
          "description": "Task subject",
          "type": "string"
        },
        "description": {
          "description": "Task description",
          "type": "string"
        },
        "whoId": {
          "description": "Related contact/lead ID",
          "type": "string"
        },
        "whatId": {
          "description": "Related account/opportunity ID",
          "type": "string"
        },
        "activityDate": {
          "description": "Due date",
          "type": "string"
        },
        "priority": {
          "description": "Task priority",
          "type": "string",
          "enum": [
            "High",
            "Normal",
            "Low"
          ]
        }
      },
      "required": [
        "subject"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "crm"
        },
        "appName": {
          "type": "string",
          "const": "Salesforce"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "api"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}