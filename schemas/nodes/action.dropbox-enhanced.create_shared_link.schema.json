{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.dropbox-enhanced.create_shared_link.schema.json",
  "title": "Dropbox Enhanced - Create Shared Link",
  "description": "Create a shared link for a file or folder",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.dropbox-enhanced.create_shared_link",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "path": {
          "type": "string",
          "description": "Path to share"
        },
        "settings": {
          "type": "object",
          "properties": {
            "requested_visibility": {
              "type": "string",
              "enum": [
                "public",
                "team_only",
                "password"
              ]
            },
            "link_password": {
              "type": "string"
            },
            "expires": {
              "type": "string",
              "format": "date-time"
            }
          },
          "description": "Shared link settings"
        },
        "short_url": {
          "type": "boolean",
          "default": false,
          "description": "Create short URL"
        }
      },
      "required": [
        "path"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "File Storage"
        },
        "appName": {
          "type": "string",
          "const": "Dropbox Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}