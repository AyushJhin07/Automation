{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.sharepoint.list_files.schema.json",
  "title": "SharePoint - List Files",
  "description": "List files in a folder",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.sharepoint.list_files",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "siteId": {
          "type": "string",
          "description": "SharePoint site ID"
        },
        "driveId": {
          "type": "string",
          "description": "Drive ID"
        },
        "folderId": {
          "type": "string",
          "description": "Folder ID (use 'root' for root folder)"
        },
        "folderPath": {
          "type": "string",
          "description": "Folder path (alternative to folderId)"
        },
        "filter": {
          "type": "string",
          "description": "OData filter expression"
        },
        "orderBy": {
          "type": "string",
          "description": "Order by field"
        },
        "top": {
          "type": "number",
          "minimum": 1,
          "maximum": 999,
          "description": "Number of items to return"
        }
      },
      "required": [
        "siteId"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "File Storage"
        },
        "appName": {
          "type": "string",
          "const": "SharePoint"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}