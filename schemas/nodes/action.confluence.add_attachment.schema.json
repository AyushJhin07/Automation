{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.confluence.add_attachment.schema.json",
  "title": "Confluence - Add Attachment",
  "description": "Add an attachment to a Confluence page",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.confluence.add_attachment",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "page_id": {
          "description": "Page ID",
          "type": "string"
        },
        "filename": {
          "description": "Attachment filename",
          "type": "string"
        },
        "file_data": {
          "description": "Base64 encoded file data",
          "type": "string"
        },
        "comment": {
          "description": "Attachment comment",
          "type": "string"
        }
      },
      "required": [
        "page_id",
        "filename",
        "file_data"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Collaboration"
        },
        "appName": {
          "type": "string",
          "const": "Confluence"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "write:confluence-content"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}