{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.google-slides.create_image.schema.json",
  "title": "Google Slides - Create Image",
  "description": "Create an image on a slide",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.google-slides.create_image",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "presentationId": {
          "type": "string",
          "description": "Presentation ID"
        },
        "pageId": {
          "type": "string",
          "description": "Slide ID to add image to"
        },
        "objectId": {
          "type": "string",
          "description": "Object ID for the image"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Image URL"
        },
        "elementProperties": {
          "type": "object",
          "properties": {
            "pageObjectId": {
              "type": "string"
            },
            "size": {
              "type": "object"
            },
            "transform": {
              "type": "object"
            }
          },
          "description": "Element properties"
        }
      },
      "required": [
        "presentationId",
        "pageId",
        "objectId",
        "url"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Productivity"
        },
        "appName": {
          "type": "string",
          "const": "Google Slides"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}