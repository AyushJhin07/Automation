{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.zoho-crm.convert_lead.schema.json",
  "title": "Zoho CRM - Convert Lead",
  "description": "Convert a lead to contact/account/deal",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.zoho-crm.convert_lead",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "lead_id": {
          "type": "string",
          "description": "Lead ID to convert"
        },
        "data": {
          "type": "object",
          "properties": {
            "overwrite": {
              "type": "boolean"
            },
            "notify_lead_owner": {
              "type": "boolean"
            },
            "notify_new_entity_owner": {
              "type": "boolean"
            },
            "Accounts": {
              "type": "object"
            },
            "Contacts": {
              "type": "object"
            },
            "Deals": {
              "type": "object"
            }
          },
          "description": "Conversion data"
        },
        "assign_to": {
          "type": "string",
          "description": "User ID to assign converted records to"
        }
      },
      "required": [
        "lead_id",
        "data"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "CRM"
        },
        "appName": {
          "type": "string",
          "const": "Zoho CRM"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}