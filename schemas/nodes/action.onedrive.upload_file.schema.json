{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.onedrive.upload_file.schema.json",
  "title": "OneDrive - Upload File",
  "description": "Upload a file to OneDrive",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.onedrive.upload_file",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "fileName": {
          "type": "string",
          "description": "File name"
        },
        "content": {
          "type": "string",
          "description": "File content (base64 encoded)"
        },
        "folderId": {
          "type": "string",
          "description": "Folder ID to upload to"
        },
        "conflictBehavior": {
          "type": "string",
          "enum": [
            "rename",
            "replace",
            "fail"
          ],
          "default": "rename",
          "description": "Behavior when file exists"
        }
      },
      "required": [
        "fileName",
        "content"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Storage"
        },
        "appName": {
          "type": "string",
          "const": "OneDrive"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}