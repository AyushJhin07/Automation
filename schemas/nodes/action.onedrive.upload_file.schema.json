{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.onedrive.upload_file.schema.json",
  "title": "OneDrive - Upload File",
  "description": "Upload a file to OneDrive",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.onedrive.upload_file",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "folderId": {
          "description": "Folder ID",
          "type": "string"
        },
        "name": {
          "description": "File name",
          "type": "string"
        },
        "base64": {
          "description": "Base64 encoded file content",
          "type": "string"
        }
      },
      "required": [
        "folderId",
        "name",
        "base64"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Cloud Storage"
        },
        "appName": {
          "type": "string",
          "const": "OneDrive"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "Files.ReadWrite"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}