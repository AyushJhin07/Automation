{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.caldotcom.create_booking.schema.json",
  "title": "Cal.com - Create Booking",
  "description": "Create a new booking",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.caldotcom.create_booking",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "eventTypeId": {
          "type": "number",
          "description": "Event type ID"
        },
        "start": {
          "type": "string",
          "format": "date-time",
          "description": "Booking start time"
        },
        "end": {
          "type": "string",
          "format": "date-time",
          "description": "Booking end time"
        },
        "attendee": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "timeZone": {
              "type": "string"
            }
          },
          "description": "Attendee information"
        },
        "meetingUrl": {
          "type": "string",
          "format": "uri",
          "description": "Meeting URL"
        },
        "title": {
          "type": "string",
          "description": "Booking title"
        },
        "description": {
          "type": "string",
          "description": "Booking description"
        },
        "location": {
          "type": "string",
          "description": "Meeting location"
        },
        "customFields": {
          "type": "object",
          "description": "Custom field values"
        }
      },
      "required": [
        "eventTypeId",
        "start",
        "end",
        "attendee"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Scheduling"
        },
        "appName": {
          "type": "string",
          "const": "Cal.com"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}