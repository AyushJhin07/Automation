{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.shopify.search_customers.schema.json",
  "title": "Shopify - Search Customers",
  "description": "Search for customers",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.shopify.search_customers",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "query": {
          "description": "Search query",
          "type": "string"
        },
        "limit": {
          "description": "Number of results",
          "type": "number",
          "default": 50
        }
      },
      "required": [
        "query"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "ecommerce"
        },
        "appName": {
          "type": "string",
          "const": "Shopify"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "read_customers"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}