{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.google-sheets-enhanced.update_cell.schema.json",
  "title": "Google Sheets Enhanced - Update Cell",
  "description": "Update a specific cell value",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.google-sheets-enhanced.update_cell",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "spreadsheetId": {
          "type": "string",
          "description": "Spreadsheet ID"
        },
        "range": {
          "type": "string",
          "description": "Cell range (e.g., 'Sheet1!A1' or 'A1')"
        },
        "value": {
          "type": "string",
          "description": "Cell value to set"
        },
        "valueInputOption": {
          "type": "string",
          "enum": [
            "RAW",
            "USER_ENTERED"
          ],
          "default": "USER_ENTERED",
          "description": "How values should be interpreted"
        }
      },
      "required": [
        "spreadsheetId",
        "range",
        "value"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Productivity"
        },
        "appName": {
          "type": "string",
          "const": "Google Sheets Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}