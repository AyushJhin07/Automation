{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.github-enhanced.search_repositories.schema.json",
  "title": "GitHub Enhanced - Search Repositories",
  "description": "Search for repositories",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.github-enhanced.search_repositories",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "q": {
          "type": "string",
          "description": "Search query"
        },
        "sort": {
          "type": "string",
          "enum": [
            "stars",
            "forks",
            "help-wanted-issues",
            "updated"
          ],
          "description": "Sort field"
        },
        "order": {
          "type": "string",
          "enum": [
            "desc",
            "asc"
          ],
          "default": "desc",
          "description": "Sort order"
        },
        "per_page": {
          "type": "number",
          "minimum": 1,
          "maximum": 100,
          "default": 30,
          "description": "Results per page"
        },
        "page": {
          "type": "number",
          "minimum": 1,
          "default": 1,
          "description": "Page number"
        }
      },
      "required": [
        "q"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Developer Tools"
        },
        "appName": {
          "type": "string",
          "const": "GitHub Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}