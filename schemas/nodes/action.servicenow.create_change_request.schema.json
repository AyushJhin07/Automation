{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.servicenow.create_change_request.schema.json",
  "title": "ServiceNow - Create Change Request",
  "description": "Create a new change request",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.servicenow.create_change_request",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "short_description": {
          "type": "string",
          "description": "Short description"
        },
        "description": {
          "type": "string",
          "description": "Detailed description"
        },
        "type": {
          "type": "string",
          "enum": [
            "standard",
            "normal",
            "emergency"
          ],
          "description": "Change type"
        },
        "priority": {
          "type": "string",
          "enum": [
            "1",
            "2",
            "3",
            "4"
          ],
          "description": "Priority level"
        },
        "risk": {
          "type": "string",
          "enum": [
            "1",
            "2",
            "3",
            "4"
          ],
          "description": "Risk level"
        },
        "impact": {
          "type": "string",
          "enum": [
            "1",
            "2",
            "3"
          ],
          "description": "Impact level"
        },
        "requested_by": {
          "type": "string",
          "description": "Requested by user"
        },
        "assignment_group": {
          "type": "string",
          "description": "Assignment group"
        },
        "assigned_to": {
          "type": "string",
          "description": "Assigned user"
        },
        "start_date": {
          "type": "string",
          "format": "date-time",
          "description": "Planned start date"
        },
        "end_date": {
          "type": "string",
          "format": "date-time",
          "description": "Planned end date"
        },
        "implementation_plan": {
          "type": "string",
          "description": "Implementation plan"
        },
        "backout_plan": {
          "type": "string",
          "description": "Backout plan"
        },
        "test_plan": {
          "type": "string",
          "description": "Test plan"
        }
      },
      "required": [
        "short_description"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "IT Service Management"
        },
        "appName": {
          "type": "string",
          "const": "ServiceNow"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}