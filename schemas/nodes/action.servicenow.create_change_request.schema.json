{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.servicenow.create_change_request.schema.json",
  "title": "ServiceNow - Create Change Request",
  "description": "Create a new change request",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.servicenow.create_change_request",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "short_description": {
          "description": "Brief summary of the change",
          "type": "string"
        },
        "description": {
          "description": "Detailed description",
          "type": "string"
        },
        "type": {
          "description": "Change type",
          "type": "string",
          "enum": [
            "Standard",
            "Normal",
            "Emergency"
          ]
        },
        "risk": {
          "description": "Risk level",
          "type": "string",
          "enum": [
            "High",
            "Moderate",
            "Low"
          ]
        },
        "implementation_plan": {
          "description": "Implementation plan",
          "type": "string"
        }
      },
      "required": [
        "short_description"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "ITSM"
        },
        "appName": {
          "type": "string",
          "const": "ServiceNow"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "change_write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}