{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.jira-service-management.transition_customer_request.schema.json",
  "title": "Jira Service Management - Transition Customer Request",
  "description": "Transition customer request status",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.jira-service-management.transition_customer_request",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "issueIdOrKey": {
          "type": "string",
          "description": "Issue ID or key"
        },
        "id": {
          "type": "string",
          "description": "Transition ID"
        },
        "comment": {
          "type": "string",
          "description": "Comment for the transition"
        },
        "additionalComment": {
          "type": "object",
          "properties": {
            "body": {
              "type": "string"
            },
            "public": {
              "type": "boolean"
            }
          },
          "description": "Additional comment details"
        }
      },
      "required": [
        "issueIdOrKey",
        "id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "IT Service Management"
        },
        "appName": {
          "type": "string",
          "const": "Jira Service Management"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}