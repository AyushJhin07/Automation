{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.ringcentral.create_meeting.schema.json",
  "title": "RingCentral - Create Meeting",
  "description": "Create a video meeting",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.ringcentral.create_meeting",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "topic": {
          "type": "string",
          "description": "Meeting topic"
        },
        "meetingType": {
          "type": "string",
          "enum": [
            "Instant",
            "Scheduled",
            "ScheduledRecurring",
            "InstantRecurring"
          ],
          "default": "Scheduled",
          "description": "Meeting type"
        },
        "schedule": {
          "type": "object",
          "properties": {
            "startTime": {
              "type": "string",
              "format": "date-time"
            },
            "durationInMinutes": {
              "type": "number",
              "minimum": 1
            },
            "timeZone": {
              "type": "object"
            }
          },
          "additionalProperties": false
        },
        "password": {
          "type": "string",
          "description": "Meeting password"
        },
        "host": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "allowJoinBeforeHost": {
          "type": "boolean",
          "description": "Allow join before host"
        },
        "startHostVideo": {
          "type": "boolean",
          "description": "Start with host video"
        },
        "startParticipantsVideo": {
          "type": "boolean",
          "description": "Start with participants video"
        },
        "audioOptions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Audio options"
        },
        "recurrence": {
          "type": "object",
          "properties": {
            "schedule": {
              "type": "object"
            },
            "until": {
              "type": "string",
              "format": "date-time"
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "topic"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Communication"
        },
        "appName": {
          "type": "string",
          "const": "RingCentral"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}