{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.workfront.create_timesheet.schema.json",
  "title": "Adobe Workfront - Create Timesheet",
  "description": "Create a new timesheet",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.workfront.create_timesheet",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "userID": {
          "type": "string",
          "description": "User ID"
        },
        "startDate": {
          "type": "string",
          "format": "date",
          "description": "Timesheet start date"
        },
        "endDate": {
          "type": "string",
          "format": "date",
          "description": "Timesheet end date"
        },
        "approverID": {
          "type": "string",
          "description": "Approver ID"
        },
        "timesheetProfileID": {
          "type": "string",
          "description": "Timesheet profile ID"
        }
      },
      "required": [
        "userID",
        "startDate",
        "endDate"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Project Management"
        },
        "appName": {
          "type": "string",
          "const": "Adobe Workfront"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}