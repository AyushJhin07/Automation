{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.pagerduty.create_incident.schema.json",
  "title": "PagerDuty - Create Incident",
  "description": "Create a new incident in PagerDuty",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.pagerduty.create_incident",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "title": {
          "description": "Incident title",
          "type": "string"
        },
        "service_id": {
          "description": "Service ID",
          "type": "string"
        },
        "urgency": {
          "description": "Incident urgency",
          "type": "string",
          "enum": [
            "high",
            "low"
          ],
          "default": "high"
        },
        "incident_key": {
          "description": "Unique incident key",
          "type": "string"
        },
        "details": {
          "description": "Additional incident details",
          "type": "string"
        }
      },
      "required": [
        "title",
        "service_id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Incident Management"
        },
        "appName": {
          "type": "string",
          "const": "PagerDuty"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "incidents:write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}