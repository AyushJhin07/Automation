{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.miro.create_text.schema.json",
  "title": "Miro - Create Text",
  "description": "Create a text item on a board",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.miro.create_text",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "boardId": {
          "type": "string",
          "description": "Board ID"
        },
        "content": {
          "type": "string",
          "description": "Text content"
        },
        "style": {
          "type": "object",
          "properties": {
            "color": {
              "type": "string",
              "description": "Text color"
            },
            "fillColor": {
              "type": "string",
              "description": "Background fill color"
            },
            "fontFamily": {
              "type": "string",
              "enum": [
                "arial",
                "cursive",
                "impact",
                "times_new_roman"
              ]
            },
            "fontSize": {
              "type": "number",
              "minimum": 8,
              "maximum": 288
            },
            "textAlign": {
              "type": "string",
              "enum": [
                "left",
                "center",
                "right"
              ]
            }
          },
          "description": "Text styling"
        },
        "geometry": {
          "type": "object",
          "properties": {
            "width": {
              "type": "number"
            },
            "height": {
              "type": "number"
            }
          },
          "description": "Text dimensions"
        },
        "position": {
          "type": "object",
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            },
            "origin": {
              "type": "string",
              "enum": [
                "center"
              ],
              "default": "center"
            }
          },
          "description": "Text position on board"
        }
      },
      "required": [
        "boardId",
        "content"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Collaboration"
        },
        "appName": {
          "type": "string",
          "const": "Miro"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}