{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.sap-ariba.get_suppliers.schema.json",
  "title": "SAP Ariba - Get Suppliers",
  "description": "Get list of suppliers",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.sap-ariba.get_suppliers",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "realm": {
          "type": "string",
          "description": "Ariba realm"
        },
        "filters": {
          "type": "object",
          "properties": {
            "updatedDateFrom": {
              "type": "string",
              "format": "date"
            },
            "updatedDateTo": {
              "type": "string",
              "format": "date"
            },
            "status": {
              "type": "string"
            },
            "vendorId": {
              "type": "string"
            }
          },
          "description": "Filter criteria"
        },
        "orderBy": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Sort fields"
        },
        "select": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Fields to select"
        },
        "$top": {
          "type": "number",
          "minimum": 1,
          "maximum": 1000,
          "default": 100,
          "description": "Number of records to return"
        },
        "$skip": {
          "type": "number",
          "minimum": 0,
          "default": 0,
          "description": "Number of records to skip"
        }
      },
      "required": [
        "realm"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "ERP"
        },
        "appName": {
          "type": "string",
          "const": "SAP Ariba"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}