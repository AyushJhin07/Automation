{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.stripe.create_payment_intent.schema.json",
  "title": "Stripe - Create Payment Intent",
  "description": "Create a payment intent",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.stripe.create_payment_intent",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "amount": {
          "description": "Payment amount in cents",
          "type": "number"
        },
        "currency": {
          "description": "Currency code",
          "type": "string",
          "default": "usd"
        },
        "customerId": {
          "description": "Customer ID",
          "type": "string"
        },
        "description": {
          "description": "Payment description",
          "type": "string"
        },
        "metadata": {
          "description": "Custom metadata",
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "amount",
        "currency"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "payments"
        },
        "appName": {
          "type": "string",
          "const": "Stripe"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "read_write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}