{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.slack-enhanced.upload_file.schema.json",
  "title": "Slack Enhanced - Upload File",
  "description": "Upload a file to a channel",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.slack-enhanced.upload_file",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "channel": {
          "description": "Channel ID",
          "type": "string"
        },
        "filename": {
          "description": "File name",
          "type": "string"
        },
        "base64": {
          "description": "Base64 encoded file content",
          "type": "string"
        }
      },
      "required": [
        "channel",
        "filename",
        "base64"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Communication"
        },
        "appName": {
          "type": "string",
          "const": "Slack Enhanced"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "files:write"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}