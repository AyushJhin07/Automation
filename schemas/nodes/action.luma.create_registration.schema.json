{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.luma.create_registration.schema.json",
  "title": "Luma - Create Registration",
  "description": "Register a user for an event",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.luma.create_registration",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "eventId": {
          "type": "string",
          "description": "Event ID"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Attendee email"
        },
        "name": {
          "type": "string",
          "description": "Attendee name"
        },
        "additionalInfo": {
          "type": "object",
          "description": "Additional registration information"
        }
      },
      "required": [
        "eventId",
        "email"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Events"
        },
        "appName": {
          "type": "string",
          "const": "Luma"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}