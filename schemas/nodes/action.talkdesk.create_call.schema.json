{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.talkdesk.create_call.schema.json",
  "title": "Talkdesk - Create Call",
  "description": "Create a new outbound call",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.talkdesk.create_call",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "to": {
          "type": "string",
          "description": "Phone number to call"
        },
        "from": {
          "type": "string",
          "description": "Caller ID phone number"
        },
        "agent_id": {
          "type": "string",
          "description": "Agent ID to handle the call"
        },
        "contact_id": {
          "type": "string",
          "description": "Associated contact ID"
        },
        "custom_fields": {
          "type": "object",
          "description": "Custom field values for the call"
        }
      },
      "required": [
        "to",
        "agent_id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Customer Support"
        },
        "appName": {
          "type": "string",
          "const": "Talkdesk"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}