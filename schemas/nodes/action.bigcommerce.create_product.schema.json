{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.bigcommerce.create_product.schema.json",
  "title": "BigCommerce - Create Product",
  "description": "Create a new product",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.bigcommerce.create_product",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Product name"
        },
        "type": {
          "type": "string",
          "enum": [
            "physical",
            "digital"
          ],
          "description": "Product type"
        },
        "sku": {
          "type": "string",
          "description": "Product SKU"
        },
        "description": {
          "type": "string",
          "description": "Product description"
        },
        "price": {
          "type": "number",
          "description": "Product price"
        },
        "weight": {
          "type": "number",
          "description": "Product weight"
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Category IDs"
        },
        "is_visible": {
          "type": "boolean",
          "default": true,
          "description": "Product visibility"
        },
        "inventory_level": {
          "type": "number",
          "description": "Inventory level"
        }
      },
      "required": [
        "name",
        "type",
        "price"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "E-Commerce"
        },
        "appName": {
          "type": "string",
          "const": "BigCommerce"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}