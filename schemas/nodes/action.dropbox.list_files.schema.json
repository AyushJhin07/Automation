{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.dropbox.list_files.schema.json",
  "title": "Dropbox - List Files",
  "description": "List files in folder",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.dropbox.list_files",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "path": {
          "description": "Folder path",
          "type": "string",
          "default": ""
        },
        "recursive": {
          "description": "Include subfolders",
          "type": "boolean",
          "default": false
        },
        "limit": {
          "description": "Maximum files to return",
          "type": "number",
          "default": 2000
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "storage"
        },
        "appName": {
          "type": "string",
          "const": "Dropbox"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "files.metadata.read"
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}