{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.google-meet.create_space.schema.json",
  "title": "Google Meet - Create Space",
  "description": "Create a new meeting space",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.google-meet.create_space",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "config": {
          "type": "object",
          "properties": {
            "accessType": {
              "type": "string",
              "enum": [
                "OPEN",
                "TRUSTED",
                "RESTRICTED"
              ],
              "default": "TRUSTED",
              "description": "Access type for the space"
            },
            "entryPointAccess": {
              "type": "string",
              "enum": [
                "ALL",
                "CREATOR_APP_ONLY"
              ],
              "default": "ALL",
              "description": "Entry point access"
            }
          },
          "description": "Space configuration"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Communication"
        },
        "appName": {
          "type": "string",
          "const": "Google Meet"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}