{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.zoho-books.create_expense.schema.json",
  "title": "Zoho Books - Create Expense",
  "description": "Create a new expense",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.zoho-books.create_expense",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "accountId": {
          "type": "string",
          "description": "Account ID"
        },
        "date": {
          "type": "string",
          "format": "date",
          "description": "Expense date"
        },
        "amount": {
          "type": "number",
          "minimum": 0,
          "description": "Expense amount"
        },
        "description": {
          "type": "string",
          "description": "Expense description"
        },
        "vendorId": {
          "type": "string",
          "description": "Vendor ID"
        },
        "currencyId": {
          "type": "string",
          "description": "Currency ID"
        },
        "exchangeRate": {
          "type": "number",
          "minimum": 0,
          "description": "Exchange rate"
        },
        "taxId": {
          "type": "string",
          "description": "Tax ID"
        },
        "customerId": {
          "type": "string",
          "description": "Customer ID (if billable)"
        },
        "isBillable": {
          "type": "boolean",
          "default": false,
          "description": "Whether expense is billable"
        },
        "referenceNumber": {
          "type": "string",
          "description": "Reference number"
        }
      },
      "required": [
        "accountId",
        "date",
        "amount",
        "description"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Accounting"
        },
        "appName": {
          "type": "string",
          "const": "Zoho Books"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}