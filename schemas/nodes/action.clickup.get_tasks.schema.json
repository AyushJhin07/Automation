{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.clickup.get_tasks.schema.json",
  "title": "ClickUp - Get Tasks",
  "description": "Get tasks from a list",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.clickup.get_tasks",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "list_id": {
          "type": "string",
          "description": "List ID"
        },
        "archived": {
          "type": "boolean",
          "description": "Include archived tasks"
        },
        "page": {
          "type": "number",
          "description": "Page number"
        },
        "order_by": {
          "type": "string",
          "enum": [
            "id",
            "created",
            "updated",
            "due_date"
          ],
          "description": "Order by field"
        },
        "reverse": {
          "type": "boolean",
          "description": "Reverse order"
        },
        "subtasks": {
          "type": "boolean",
          "description": "Include subtasks"
        },
        "statuses": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Filter by statuses"
        },
        "include_closed": {
          "type": "boolean",
          "description": "Include closed tasks"
        },
        "assignees": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Filter by assignees"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Filter by tags"
        },
        "due_date_gt": {
          "type": "number",
          "description": "Due date greater than (Unix timestamp)"
        },
        "due_date_lt": {
          "type": "number",
          "description": "Due date less than (Unix timestamp)"
        },
        "date_created_gt": {
          "type": "number",
          "description": "Created date greater than (Unix timestamp)"
        },
        "date_created_lt": {
          "type": "number",
          "description": "Created date less than (Unix timestamp)"
        },
        "date_updated_gt": {
          "type": "number",
          "description": "Updated date greater than (Unix timestamp)"
        },
        "date_updated_lt": {
          "type": "number",
          "description": "Updated date less than (Unix timestamp)"
        },
        "date_done_gt": {
          "type": "number",
          "description": "Done date greater than (Unix timestamp)"
        },
        "date_done_lt": {
          "type": "number",
          "description": "Done date less than (Unix timestamp)"
        }
      },
      "required": [
        "list_id"
      ],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "Project Management"
        },
        "appName": {
          "type": "string",
          "const": "ClickUp"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}