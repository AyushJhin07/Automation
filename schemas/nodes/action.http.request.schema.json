{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "HTTP Request Action Node",
  "description": "Schema for HTTP request action nodes that can call external APIs",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "type": {
      "type": "string",
      "const": "action.http.request"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "params": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "format": "url",
          "pattern": "^https://"
        },
        "method": {
          "type": "string",
          "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
        },
        "headers": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "body": {
          "oneOf": [
            {"type": "string"},
            {"type": "object"},
            {"type": "null"}
          ]
        },
        "timeout": {
          "type": "number",
          "minimum": 1000,
          "maximum": 300000
        },
        "retries": {
          "type": "number",
          "minimum": 0,
          "maximum": 5
        },
        "auth": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["bearer", "basic", "api_key", "oauth2"]
            },
            "token": {
              "type": "string"
            },
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          },
          "required": ["type"]
        }
      },
      "required": ["url", "method"],
      "additionalProperties": false
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {"type": "number"},
        "y": {"type": "number"}
      },
      "required": ["x", "y"]
    }
  },
  "required": ["id", "type", "params"],
  "additionalProperties": false
}