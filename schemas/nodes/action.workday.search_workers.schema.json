{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://apps-script-studio.com/schemas/nodes/action.workday.search_workers.schema.json",
  "title": "Workday - Search Workers",
  "description": "Search for workers",
  "type": "object",
  "required": [
    "id",
    "type",
    "position",
    "parameters"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the node"
    },
    "type": {
      "type": "string",
      "const": "action.workday.search_workers",
      "description": "Node type identifier"
    },
    "position": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        }
      },
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": false
    },
    "parameters": {
      "type": "object",
      "properties": {
        "searchTerm": {
          "type": "string",
          "description": "Search term (name, email, employee ID)"
        },
        "location": {
          "type": "string",
          "description": "Filter by location"
        },
        "department": {
          "type": "string",
          "description": "Filter by department"
        },
        "jobTitle": {
          "type": "string",
          "description": "Filter by job title"
        },
        "manager": {
          "type": "string",
          "description": "Filter by manager ID"
        },
        "isActive": {
          "type": "boolean",
          "description": "Filter by active status"
        },
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 100,
          "default": 20,
          "description": "Number of results to return"
        },
        "offset": {
          "type": "number",
          "minimum": 0,
          "default": 0,
          "description": "Number of results to skip"
        }
      },
      "required": [],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "properties": {
        "label": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "const": "HR"
        },
        "appName": {
          "type": "string",
          "const": "Workday"
        },
        "requiredScopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}