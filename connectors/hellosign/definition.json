                }
              },
              "required": [
                "name"
              ]
            },
            "description": "CC roles"
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "File URLs or base64 encoded files"
          },
          "merge_fields": {
            "type": "array",
            "items": {
              "type": "object",
