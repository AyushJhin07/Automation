      "parameters": {
        "type": "object",
        "properties": {
          "account_id": {
            "type": "string",
            "description": "Account ID filter"
          },
          "page": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          },
          "page_size": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 20,
            "description": "Number of results per page"
          },
          "query": {
            "type": "string",
            "description": "Search query"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "remind_signature_request",
