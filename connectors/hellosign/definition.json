        "type": "object",
        "properties": {
          "signature_request_id": {
            "type": "string",
            "description": "Signature request ID"
          },
          "email_address": {
            "type": "string",
            "format": "email",
            "description": "Email address to remind"
          }
        },
        "required": [
          "signature_request_id",
          "email_address"
        ],
        "additionalProperties": false
      }
    },
    {
      "id": "cancel_signature_request",
      "name": "Cancel Signature Request",
      "description": "Cancel a signature request",
      "parameters": {
        "type": "object",
        "properties": {
          "signature_request_id": {
            "type": "string",
            "description": "Signature request ID"
          }
        },
        "required": [
          "signature_request_id"
        ],
        "additionalProperties": false
      }
    },
    {
      "id": "download_files",
      "name": "Download Files",
      "description": "Download signed files",
      "parameters": {
        "type": "object",
        "properties": {
          "signature_request_id": {
            "type": "string",
            "description": "Signature request ID"
          },
          "file_type": {
            "type": "string",
            "enum": [
              "pdf",
              "zip"
            ],
            "default": "pdf",
            "description": "File type to download"
          }
        },
        "required": [
          "signature_request_id"
        ],
        "additionalProperties": false
      }
    },
    {
      "id": "create_embedded_signature_request",
