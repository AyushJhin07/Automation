{
  "id": "brex",
  "name": "Brex",
  "description": "Brex corporate credit card and expense management platform",
  "category": "Finance",
  "icon": "brex",
  "color": "#6C47FF",
  "version": "1.0.0",
  "authentication": {
    "type": "api_key",
    "config": {
      "type": "header",
      "name": "Authorization",
      "prefix": "Bearer"
    }
  },
  "baseUrl": "https://platform.brexapis.com/v2",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Brex",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_expenses",
      "name": "Get Expenses",
      "description": "Retrieve expense data",
      "parameters": {
        "type": "object",
        "properties": {
          "cursor": {
            "type": "string",
            "description": "Pagination cursor"
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 10,
            "description": "Number of expenses to return"
          },
          "user_id": {
            "type": "string",
            "description": "Filter by user ID"
          },
          "parent_expense_id": {
            "type": "string",
            "description": "Filter by parent expense"
          },
          "budget_id": {
            "type": "string",
            "description": "Filter by budget"
          },
          "status": {
            "type": "array",
            "items": {"type": "string", "enum": ["DRAFT", "SUBMITTED", "APPROVED", "DECLINED", "PAID"]},
            "description": "Filter by status"
          },
          "expand": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Expand related resources"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_expense",
      "name": "Create Expense",
      "description": "Create a new expense",
      "parameters": {
        "type": "object",
        "properties": {
          "owner_user_id": {
            "type": "string",
            "description": "Expense owner user ID"
          },
          "memo": {
            "type": "string",
            "description": "Expense memo"
          },
          "amount": {
            "type": "object",
            "properties": {
              "amount": {"type": "number"},
              "currency": {"type": "string"}
            },
            "required": ["amount", "currency"],
            "description": "Expense amount"
          },
          "expense_type_id": {
            "type": "string",
            "description": "Expense type ID"
          },
          "purchased_at": {
            "type": "string",
            "format": "date-time",
            "description": "Purchase date"
          },
          "receipts": {
            "type": "array",
            "items": {"type": "object"},
            "description": "Expense receipts"
          }
        },
        "required": ["owner_user_id", "amount"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_users",
      "name": "Get Users",
      "description": "Retrieve users",
      "parameters": {
        "type": "object",
        "properties": {
          "cursor": {
            "type": "string",
            "description": "Pagination cursor"
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 10,
            "description": "Number of users to return"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Filter by email"
          },
          "expand": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Expand related resources"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_cards",
      "name": "Get Cards",
      "description": "Retrieve card information",
      "parameters": {
        "type": "object",
        "properties": {
          "cursor": {
            "type": "string",
            "description": "Pagination cursor"
          },
          "limit": {
            "type": "number",
            "minimum": 1,
            "maximum": 100,
            "default": 10,
            "description": "Number of cards to return"
          },
          "user_id": {
            "type": "string",
            "description": "Filter by user ID"
          },
          "expand": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Expand related resources"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "expense_created",
      "name": "Expense Created",
      "description": "Triggered when a new expense is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string",
            "description": "Filter by user"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "memo": {"type": "string"},
          "amount": {"type": "object"},
          "status": {"type": "string"}
        }
      }
    },
    {
      "id": "expense_updated",
      "name": "Expense Updated",
      "description": "Triggered when an expense is updated",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "status": {"type": "string"},
          "updated_at": {"type": "string"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/users"
  }
}