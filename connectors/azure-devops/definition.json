  "triggers": [
    {
      "id": "build_completed",
      "name": "Build Completed",
      "description": "Triggered when a build completes",
      "category": "DevOps",
      "parameters": {
        "type": "object",
        "properties": {
          "definition_id": {
            "type": "string",
            "description": "Build definition ID to monitor"
          },
          "result": {
            "type": "string",
            "enum": [
              "succeeded",
              "failed",
              "canceled"
            ],
            "description": "Filter by build result"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "properties": {
