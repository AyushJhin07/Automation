          },
          "tableId": {
            "type": "string",
            "description": "Filter by table"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "href": {
            "type": "string"
          },
          "values": {
            "type": "object"
          }
        }
      }
    },
    {
      "id": "row_updated",
      "name": "Row Updated",
      "description": "Triggered when a row is updated",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "docId": {
            "type": "string",
            "description": "Filter by document"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        }
      }
    }
