{
  "id": "sendgrid",
  "name": "SendGrid",
  "description": "SendGrid email delivery service and marketing platform",
  "category": "Email",
  "icon": "sendgrid",
  "color": "#1A82E2",
  "version": "1.0.0",
  "authentication": {
    "type": "api_key",
    "config": {
      "apiKeyLocation": "header",
      "apiKeyName": "Authorization",
      "apiKeyPrefix": "Bearer"
    }
  },
  "baseUrl": "https://api.sendgrid.com/v3",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to SendGrid",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "send_email",
      "name": "Send Email",
      "description": "Send an email",
      "parameters": {
        "type": "object",
        "properties": {
          "personalizations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "to": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "email": {"type": "string", "format": "email"},
                      "name": {"type": "string"}
                    },
                    "required": ["email"]
                  }
                },
                "cc": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "email": {"type": "string", "format": "email"},
                      "name": {"type": "string"}
                    }
                  }
                },
                "bcc": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "email": {"type": "string", "format": "email"},
                      "name": {"type": "string"}
                    }
                  }
                },
                "subject": {"type": "string"},
                "substitutions": {"type": "object"},
                "custom_args": {"type": "object"}
              },
              "required": ["to"]
            },
            "description": "Email personalizations"
          },
          "from": {
            "type": "object",
            "properties": {
              "email": {"type": "string", "format": "email"},
              "name": {"type": "string"}
            },
            "required": ["email"],
            "description": "From address"
          },
          "reply_to": {
            "type": "object",
            "properties": {
              "email": {"type": "string", "format": "email"},
              "name": {"type": "string"}
            },
            "description": "Reply to address"
          },
          "subject": {
            "type": "string",
            "description": "Email subject"
          },
          "content": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {"type": "string", "enum": ["text/plain", "text/html"]},
                "value": {"type": "string"}
              },
              "required": ["type", "value"]
            },
            "description": "Email content"
          },
          "attachments": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "content": {"type": "string"},
                "filename": {"type": "string"},
                "type": {"type": "string"},
                "disposition": {"type": "string", "enum": ["attachment", "inline"]},
                "content_id": {"type": "string"}
              },
              "required": ["content", "filename"]
            },
            "description": "Email attachments"
          },
          "template_id": {
            "type": "string",
            "description": "Template ID"
          },
          "categories": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Email categories"
          },
          "send_at": {
            "type": "number",
            "description": "Unix timestamp to send email"
          }
        },
        "required": ["personalizations", "from", "subject", "content"],
        "additionalProperties": false
      }
    },
    {
      "id": "add_contact",
      "name": "Add Contact",
      "description": "Add a contact to a list",
      "parameters": {
        "type": "object",
        "properties": {
          "list_ids": {
            "type": "array",
            "items": {"type": "string"},
            "description": "List IDs to add contact to"
          },
          "contacts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "email": {"type": "string", "format": "email"},
                "first_name": {"type": "string"},
                "last_name": {"type": "string"},
                "custom_fields": {"type": "object"}
              },
              "required": ["email"]
            },
            "description": "Contacts to add"
          }
        },
        "required": ["contacts"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_lists",
      "name": "Get Lists",
      "description": "Get contact lists",
      "parameters": {
        "type": "object",
        "properties": {
          "page_size": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "default": 10,
            "description": "Number of lists to return"
          },
          "page_token": {
            "type": "string",
            "description": "Page token for pagination"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_list",
      "name": "Create List",
      "description": "Create a new contact list",
      "parameters": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "List name"
          }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_templates",
      "name": "Get Templates",
      "description": "Get email templates",
      "parameters": {
        "type": "object",
        "properties": {
          "generations": {
            "type": "string",
            "enum": ["legacy", "dynamic"],
            "description": "Template generation type"
          },
          "page_size": {
            "type": "number",
            "minimum": 1,
            "maximum": 200,
            "default": 10,
            "description": "Number of templates to return"
          },
          "page_token": {
            "type": "string",
            "description": "Page token for pagination"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "email_delivered",
      "name": "Email Delivered",
      "description": "Triggered when an email is delivered",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "category": {
            "type": "string",
            "description": "Filter by email category"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "email": {"type": "string"},
          "timestamp": {"type": "number"},
          "event": {"type": "string"},
          "category": {"type": "array"},
          "sg_event_id": {"type": "string"},
          "sg_message_id": {"type": "string"}
        }
      }
    },
    {
      "id": "email_opened",
      "name": "Email Opened",
      "description": "Triggered when an email is opened",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "category": {
            "type": "string",
            "description": "Filter by email category"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "email": {"type": "string"},
          "timestamp": {"type": "number"},
          "event": {"type": "string"},
          "category": {"type": "array"},
          "sg_event_id": {"type": "string"},
          "sg_message_id": {"type": "string"},
          "useragent": {"type": "string"},
          "ip": {"type": "string"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/user/profile"
  }
}