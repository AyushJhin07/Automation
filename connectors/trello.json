{
  "id": "trello",
  "name": "Trello",
  "description": "Automate boards, lists, and cards in Trello",
  "category": "Project Management",
  "icon": "trello",
  "color": "#0079BF",
  "authentication": {
    "type": "api_key",
    "config": {
      "queryParam": "key",
      "additionalParams": ["token"]
    }
  },
  "baseUrl": "https://api.trello.com/1",
  "testConnection": {
    "endpoint": "/members/me",
    "method": "GET"
  },
  "actions": [
    {
      "id": "list_boards",
      "name": "List Boards",
      "description": "List boards for the authenticated member",
      "endpoint": "/members/me/boards",
      "method": "GET",
      "parameters": {
        "type": "object",
        "properties": {
          "fields": {
            "type": "string",
            "default": "name,url"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "list_lists",
      "name": "List Lists",
      "description": "List lists on a board",
      "endpoint": "/boards/{boardId}/lists",
      "method": "GET",
      "parameters": {
        "type": "object",
        "properties": {
          "boardId": { "type": "string" }
        },
        "required": ["boardId"],
        "additionalProperties": false
      }
    },
    {
      "id": "create_card",
      "name": "Create Card",
      "description": "Create a new card",
      "endpoint": "/cards",
      "method": "POST",
      "parameters": {
        "type": "object",
        "properties": {
          "idList": { "type": "string" },
          "name": { "type": "string" },
          "desc": { "type": "string" },
          "due": { "type": "string" }
        },
        "required": ["idList", "name"],
        "additionalProperties": false
      }
    },
    {
      "id": "update_card",
      "name": "Update Card",
      "description": "Update card details",
      "endpoint": "/cards/{cardId}",
      "method": "PUT",
      "parameters": {
        "type": "object",
        "properties": {
          "cardId": { "type": "string" },
          "name": { "type": "string" },
          "desc": { "type": "string" },
          "closed": { "type": "boolean" }
        },
        "required": ["cardId"],
        "additionalProperties": false
      }
    },
    {
      "id": "add_comment",
      "name": "Add Comment",
      "description": "Add a comment to a card",
      "endpoint": "/cards/{cardId}/actions/comments",
      "method": "POST",
      "parameters": {
        "type": "object",
        "properties": {
          "cardId": { "type": "string" },
          "text": { "type": "string" }
        },
        "required": ["cardId", "text"],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "card_created",
      "name": "Card Created",
      "description": "Triggered when a new card is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "boardId": { "type": "string" }
        },
        "required": ["boardId"],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "idList": { "type": "string" }
        }
      }
    }
  ]
}
