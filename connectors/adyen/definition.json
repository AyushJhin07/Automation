      "parameters": {
        "type": "object",
        "properties": {
          "paymentPspReference": {
            "type": "string",
            "description": "Payment PSP reference"
          },
          "amount": {
            "type": "object",
            "properties": {
              "currency": {
                "type": "string"
              },
              "value": {
                "type": "number"
              }
            },
            "description": "Amount to capture"
          },
          "merchantAccount": {
            "type": "string",
            "description": "Merchant account"
          },
          "reference": {
            "type": "string",
            "description": "Capture reference"
          }
        },
        "required": [
          "paymentPspReference",
          "amount",
          "merchantAccount"
        ],
        "additionalProperties": false
      }
    },
    {
      "id": "refund_payment",
