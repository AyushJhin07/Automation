  "availability": "stable",
  "authentication": {
    "type": "api_key",
    "config": {
      "type": "header",
      "name": "X-API-Key"
    }
  },
  "baseUrl": "https://checkout-test.adyen.com/v70",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
