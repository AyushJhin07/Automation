        "type": "object",
        "properties": {
          "paymentPspReference": {
            "type": "string",
            "description": "Payment PSP reference"
          },
          "amount": {
            "type": "object",
            "properties": {
              "currency": {
                "type": "string"
              },
              "value": {
                "type": "number"
              }
            },
            "description": "Refund amount"
          },
          "merchantAccount": {
            "type": "string",
            "description": "Merchant account"
          },
          "reference": {
            "type": "string",
