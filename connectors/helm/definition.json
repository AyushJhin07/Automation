{
  "id": "helm",
  "name": "Helm",
  "description": "Kubernetes package manager and application deployment",
  "category": "DevOps",
  "icon": "â›µ",
  "color": "#0F1689",
  "authentication": {
    "type": "kubeconfig",
    "fields": [
      {
        "key": "kubeconfig",
        "label": "Kubeconfig Content",
        "type": "textarea",
        "required": true
      },
      {
        "key": "namespace",
        "label": "Default Namespace",
        "type": "text",
        "default": "default",
        "required": false
      }
    ]
  },
  "baseUrl": "kubernetes-api-via-helm",
  "rateLimits": {
    "requestsPerSecond": 10,
    "requestsPerMinute": 100,
    "dailyLimit": 1000
  },
  "actions": [
    {
      "id": "install_chart",
      "name": "Install Chart",
      "description": "Install a Helm chart",
      "category": "DevOps",
      "parameters": {
        "type": "object",
        "properties": {
          "release_name": {
            "type": "string",
            "description": "Release name"
          },
          "chart": {
            "type": "string",
            "description": "Chart name or path"
          },
          "namespace": {
            "type": "string",
            "default": "default",
            "description": "Kubernetes namespace"
          },
          "values": {
            "type": "object",
            "description": "Chart values to override"
          },
          "version": {
            "type": "string",
            "description": "Chart version"
          },
          "repository": {
            "type": "string",
            "description": "Helm repository URL"
          }
        },
        "required": [
          "release_name",
          "chart"
        ],
        "additionalProperties": false
      },
      "outputSchema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Indicates whether the operation succeeded."
          }
        },
        "required": [
          "success"
        ],
        "additionalProperties": true
      },
      "sample": {
        "success": true
      }
    },
    {
