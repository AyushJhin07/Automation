          },
          "values": {
            "type": "object",
            "description": "Chart values to override"
          },
          "version": {
            "type": "string",
            "description": "Chart version"
          }
        },
        "required": [
          "release_name",
          "chart"
        ],
        "additionalProperties": false
      },
      "outputSchema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
