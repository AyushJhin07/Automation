    {
      "id": "list_releases",
      "name": "List Releases",
      "description": "List Helm releases",
      "category": "DevOps",
      "parameters": {
        "type": "object",
        "properties": {
          "namespace": {
            "type": "string",
            "description": "Kubernetes namespace"
          },
          "all_namespaces": {
            "type": "boolean",
            "default": false,
            "description": "List releases from all namespaces"
          },
          "status": {
            "type": "string",
            "enum": [
              "deployed",
              "uninstalled",
              "superseded",
              "failed",
              "pending-install",
              "pending-upgrade",
              "pending-rollback"
