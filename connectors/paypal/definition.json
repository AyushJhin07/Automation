    {
      "id": "list_payments",
      "name": "List Payments",
      "description": "List payments with optional filtering",
      "parameters": {
        "type": "object",
        "properties": {
          "count": {
            "type": "number",
            "minimum": 1,
            "maximum": 20,
            "default": 10,
            "description": "Number of payments to return"
          },
          "start_id": {
            "type": "string",
            "description": "Starting payment ID for pagination"
          },
          "start_index": {
            "type": "number",
            "description": "Starting index for pagination"
          },
          "start_time": {
            "type": "string",
            "format": "date-time",
            "description": "Start time filter (RFC 3339)"
          },
          "end_time": {
            "type": "string",
            "format": "date-time",
            "description": "End time filter (RFC 3339)"
          },
          "sort_by": {
            "type": "string",
            "enum": [
              "create_time",
              "update_time"
            ],
            "description": "Sort field"
          },
          "sort_order": {
            "type": "string",
            "enum": [
              "asc",
              "desc"
            ],
            "description": "Sort order"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Indicates whether the operation succeeded."
          }
        },
        "required": [
          "success"
        ],
        "additionalProperties": true
      },
      "sample": {
        "success": true
      }
    }
