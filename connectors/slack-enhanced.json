    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Slack",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "send_message",
      "name": "Send Message",
      "description": "Send a message to a channel",
      "parameters": {
        "type": "object",
        "properties": {
          "channel": {
            "type": "string",
            "description": "Channel ID or name"
          },
          "text": {
            "type": "string",
            "description": "Message text"
          },
          "username": {
            "type": "string",
            "description": "Username to use for the message"
          },
          "icon_emoji": {
            "type": "string",
            "description": "Emoji to use as the icon for this message"
          },
          "icon_url": {
            "type": "string",
            "description": "URL to an image to use as the icon for this message"
          },
          "link_names": {
            "type": "boolean",
            "description": "Find and link channel names and usernames"
          },
          "unfurl_links": {
            "type": "boolean",
            "description": "Enable unfurling of primarily text-based content"
          },
          "unfurl_media": {
            "type": "boolean",
            "description": "Disable unfurling of media content"
          },
          "parse": {
            "type": "string",
            "enum": ["full", "none"],
            "description": "Change how messages are treated"
          },
          "reply_broadcast": {
            "type": "boolean",
            "description": "Used in conjunction with thread_ts and indicates whether reply should be made visible to everyone in the channel"
          },
          "thread_ts": {
            "type": "string",
            "description": "Provide another message's ts value to make this message a reply"
          },
          "mrkdwn": {
            "type": "boolean",
            "default": true,
            "description": "Disable Slack markup parsing by setting to false"
          },
          "blocks": {
            "type": "array",
            "description": "A JSON-based array of structured blocks",
            "items": {
              "type": "object"
            }
          },
          "attachments": {
            "type": "array",
            "description": "A JSON-based array of structured attachments",
            "items": {
              "type": "object"
            }
          }
        },
        "required": ["channel", "text"],
        "additionalProperties": false
      }
    },
