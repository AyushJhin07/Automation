{
  "id": "slack-enhanced",
  "name": "Slack Enhanced",
  "description": "Enhanced Slack team communication platform with advanced features",
  "category": "Communication",
  "icon": "slack",
  "color": "#4A154B",
  "version": "2.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://slack.com/oauth/v2/authorize",
      "tokenUrl": "https://slack.com/api/oauth.v2.access",
      "scopes": [
        "channels:read",
        "channels:write",
        "chat:write",
        "chat:write.public",
        "files:write",
        "im:read",
        "im:write",
        "mpim:read",
        "mpim:write",
        "reactions:read",
        "reactions:write",
        "users:read",
        "users:read.email",
        "team:read",
        "groups:read",
        "groups:write"
      ]
    }
  },
  "baseUrl": "https://slack.com/api",
