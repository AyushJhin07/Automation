{
  "id": "google-docs",
  "name": "Google Docs",
  "description": "Google Docs document creation and editing platform",
  "category": "Productivity",
  "icon": "file-text",
  "color": "#4285F4",
  "version": "1.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://accounts.google.com/o/oauth2/auth",
      "tokenUrl": "https://oauth2.googleapis.com/token",
      "scopes": [
        "https://www.googleapis.com/auth/documents",
        "https://www.googleapis.com/auth/drive.file"
      ]
    }
  },
  "baseUrl": "https://docs.googleapis.com/v1",
  "rateLimits": {
    "requestsPerSecond": 5,
    "requestsPerMinute": 300,
    "dailyLimit": 100000
  },
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Google Docs and verify authentication",
      "parameters": {},
      "requiredScopes": [
        "read"
      ],
      "rateLimits": {
        "requests": 10,
        "period": "1m",
        "scope": "user"
      }
    },
    {
      "id": "create_document",
      "name": "Create Document",
      "description": "Create a new Google Docs document",
      "parameters": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Title of the document"
        },
        "folderId": {
          "type": "string",
          "required": false,
          "description": "ID of the folder to create the document in"
        }
      },
      "requiredScopes": [
        "https://www.googleapis.com/auth/documents",
        "https://www.googleapis.com/auth/drive.file"
      ]
    },
    {
      "id": "append_text",
      "name": "Append Text",
      "description": "Append text to the end of a document",
      "parameters": {
        "docId": {
          "type": "string",
          "required": true,
          "description": "ID of the document"
        },
        "text": {
          "type": "string",
          "required": true,
          "description": "Text to append"
        }
      },
      "requiredScopes": [
        "https://www.googleapis.com/auth/documents"
      ]
    },
    {
      "id": "replace_text",
      "name": "Replace Text",
      "description": "Find and replace text in a document",
      "parameters": {
        "docId": {
          "type": "string",
          "required": true,
          "description": "ID of the document"
        },
        "find": {
          "type": "string",
          "required": true,
          "description": "Text to find"
        },
        "replace": {
          "type": "string",
          "required": true,
          "description": "Text to replace with"
        }
      },
      "requiredScopes": [
        "https://www.googleapis.com/auth/documents"
      ]
    },
    {
      "id": "insert_table",
      "name": "Insert Table",
      "description": "Insert a table into the document",
      "parameters": {
        "docId": {
          "type": "string",
          "required": true,
          "description": "ID of the document"
        },
        "rows": {
          "type": "number",
          "required": true,
          "description": "Number of rows in the table"
        },
        "cols": {
          "type": "number",
          "required": true,
          "description": "Number of columns in the table"
        },
        "location": {
          "type": "number",
          "required": false,
          "description": "Index location to insert the table"
        }
      },
      "requiredScopes": [
        "https://www.googleapis.com/auth/documents"
      ]
    },
    {
      "id": "add_heading",
      "name": "Add Heading",
      "description": "Add a heading to the document",
      "parameters": {
        "docId": {
          "type": "string",
          "required": true,
          "description": "ID of the document"
        },
        "text": {
          "type": "string",
          "required": true,
          "description": "Heading text"
        },
        "level": {
          "type": "number",
          "required": true,
          "description": "Heading level (1-6)",
          "options": [
            1,
            2,
            3,
            4,
            5,
            6
          ]
        }
      },
      "requiredScopes": [
        "https://www.googleapis.com/auth/documents"
      ]
    },
    {
      "id": "add_image_from_url",
      "name": "Add Image from URL",
      "description": "Insert an image from a URL into the document",
      "parameters": {
        "docId": {
          "type": "string",
          "required": true,
          "description": "ID of the document"
        },
        "imageUrl": {
          "type": "string",
          "required": true,
          "description": "URL of the image to insert"
        },
        "location": {
          "type": "number",
          "required": false,
          "description": "Index location to insert the image"
        }
      },
      "requiredScopes": [
        "https://www.googleapis.com/auth/documents"
      ]
    },
    {
      "id": "export_pdf",
      "name": "Export as PDF",
      "description": "Export the document as a PDF",
      "parameters": {
        "docId": {
          "type": "string",
          "required": true,
          "description": "ID of the document to export"
        }
      },
      "requiredScopes": [
        "https://www.googleapis.com/auth/documents.readonly"
      ]
    },
    {
      "id": "duplicate",
      "name": "Duplicate Document",
      "description": "Create a copy of the document",
      "parameters": {
        "docId": {
          "type": "string",
          "required": true,
          "description": "ID of the document to duplicate"
        },
        "newTitle": {
          "type": "string",
          "required": false,
          "description": "Title for the new document"
        },
        "folderId": {
          "type": "string",
          "required": false,
          "description": "ID of the folder for the duplicate"
        }
      },
      "requiredScopes": [
        "https://www.googleapis.com/auth/drive.file"
      ]
    },
    {
      "id": "share_document",
      "name": "Share Document",
      "description": "Share the document with a user",
      "parameters": {
        "docId": {
          "type": "string",
          "required": true,
          "description": "ID of the document to share"
        },
        "email": {
          "type": "string",
          "required": true,
          "description": "Email address to share with"
        },
        "role": {
          "type": "string",
          "required": true,
          "description": "Role to assign",
          "options": [
            "reader",
            "writer",
            "commenter"
          ]
        }
      },
      "requiredScopes": [
        "https://www.googleapis.com/auth/drive.file"
      ]
    }
  ],
  "triggers": [
    {
      "id": "document_created",
      "name": "Document Created",
      "description": "Triggered when a new document is created",
      "parameters": {
        "folderId": {
          "type": "string",
          "required": false,
          "description": "Monitor documents in specific folder only"
        }
      },
      "requiredScopes": [
        "https://www.googleapis.com/auth/drive.metadata.readonly"
      ]
    },
    {
      "id": "document_updated",
      "name": "Document Updated",
      "description": "Triggered when a document is updated",
      "parameters": {
        "docId": {
          "type": "string",
          "required": true,
          "description": "ID of the document to monitor"
        }
      },
      "requiredScopes": [
        "https://www.googleapis.com/auth/documents.readonly"
      ]
    }
  ]
}