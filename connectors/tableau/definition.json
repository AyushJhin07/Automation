{
  "id": "tableau",
  "name": "Tableau",
  "description": "Tableau business intelligence and data visualization platform",
  "category": "Analytics",
  "icon": "tableau",
  "color": "#E97627",
  "version": "1.1.0",
  "authentication": {
    "type": "personal_access_token",
    "fields": [
      {
        "key": "serverUrl",
        "label": "Tableau Server URL",
        "type": "text",
        "required": true,
        "placeholder": "https://your-server.tableau.com",
        "description": "Base URL for your Tableau Cloud or Server instance (include https:// and no trailing slash)."
      },
      {
        "key": "siteId",
        "label": "Site ID",
        "type": "text",
        "required": true,
        "description": "UUID of the Tableau site to target. Use the default site ID for the Default site."
      },
      {
        "key": "personalAccessTokenName",
        "label": "Personal Access Token Name",
        "type": "text",
        "required": true
      },
      {
        "key": "personalAccessTokenSecret",
        "label": "Personal Access Token Secret",
        "type": "password",
        "required": true
      }
    ]
  },
  "baseUrl": "{serverUrl}/api/3.22",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Tableau Server",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID (defaults to the authenticated site)"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "method": "GET",
      "endpoint": "/sites/{siteId}"
    },
    {
      "id": "sign_in",
      "name": "Sign In",
      "description": "Sign in to Tableau Server",
      "parameters": {
        "type": "object",
        "properties": {
          "personalAccessTokenName": {
            "type": "string",
            "description": "Personal access token name"
          },
          "personalAccessTokenSecret": {
            "type": "string",
            "description": "Personal access token secret"
          },
          "siteContentUrl": {
            "type": "string",
            "description": "Site content URL slug (empty string for Default site)",
            "default": ""
          }
        },
        "required": [
          "personalAccessTokenName",
          "personalAccessTokenSecret"
        ],
        "additionalProperties": false
      },
      "method": "POST",
      "endpoint": "/auth/signin"
    },
    {
      "id": "get_sites",
      "name": "Get Sites",
      "description": "Get list of sites",
      "parameters": {
        "type": "object",
        "properties": {
          "pageSize": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "default": 100,
            "description": "Number of sites per page"
          },
          "pageNumber": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "method": "GET",
      "endpoint": "/sites"
    },
    {
      "id": "get_workbooks",
      "name": "Get Workbooks",
      "description": "Get list of workbooks",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "pageSize": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "default": 100,
            "description": "Number of workbooks per page"
          },
          "pageNumber": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          },
          "filter": {
            "type": "string",
            "description": "Filter expression"
          },
          "sort": {
            "type": "string",
            "description": "Sort expression"
          },
          "fields": {
            "type": "string",
            "description": "Fields to include"
          }
        },
        "required": [
          "siteId"
        ],
        "additionalProperties": false
      },
      "method": "GET",
      "endpoint": "/sites/{siteId}/workbooks"
    },
    {
      "id": "get_workbook",
      "name": "Get Workbook",
      "description": "Get workbook details",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "workbookId": {
            "type": "string",
            "description": "Workbook ID"
          }
        },
        "required": [
          "siteId",
          "workbookId"
        ],
        "additionalProperties": false
      },
      "method": "GET",
      "endpoint": "/sites/{siteId}/workbooks/{workbookId}"
    },
    {
      "id": "update_workbook",
      "name": "Update Workbook",
      "description": "Update workbook properties",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "workbookId": {
            "type": "string",
            "description": "Workbook ID"
          },
          "name": {
            "type": "string",
            "description": "Workbook name"
          },
          "description": {
            "type": "string",
            "description": "Workbook description"
          },
          "showTabs": {
            "type": "boolean",
            "description": "Show tabs"
          },
          "projectId": {
            "type": "string",
            "description": "Project ID"
          },
          "ownerId": {
            "type": "string",
            "description": "Owner ID"
          }
        },
        "required": [
          "siteId",
          "workbookId"
        ],
        "additionalProperties": false
      },
      "method": "PUT",
      "endpoint": "/sites/{siteId}/workbooks/{workbookId}"
    },
    {
      "id": "get_views",
      "name": "Get Views",
      "description": "Get list of views in a workbook",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "workbookId": {
            "type": "string",
            "description": "Workbook ID"
          },
          "pageSize": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "default": 100,
            "description": "Number of views per page"
          },
          "pageNumber": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          },
          "filter": {
            "type": "string",
            "description": "Filter expression"
          }
        },
        "required": [
          "siteId",
          "workbookId"
        ],
        "additionalProperties": false
      },
      "method": "GET",
      "endpoint": "/sites/{siteId}/workbooks/{workbookId}/views"
    },
    {
      "id": "get_view",
      "name": "Get View",
      "description": "Get view details",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "viewId": {
            "type": "string",
            "description": "View ID"
          }
        },
        "required": [
          "siteId",
          "viewId"
        ],
        "additionalProperties": false
      },
      "method": "GET",
      "endpoint": "/sites/{siteId}/views/{viewId}"
    },
    {
      "id": "query_view_data",
      "name": "Query View Data",
      "description": "Query data from a view",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "viewId": {
            "type": "string",
            "description": "View ID"
          },
          "maxAge": {
            "type": "number",
            "minimum": 1,
            "description": "Maximum age of cached data in minutes"
          },
          "params": {
            "type": "object",
            "description": "View parameters"
          }
        },
        "required": [
          "siteId",
          "viewId"
        ],
        "additionalProperties": false
      },
      "method": "GET",
      "endpoint": "/sites/{siteId}/views/{viewId}/data"
    },
    {
      "id": "get_datasources",
      "name": "Get Data Sources",
      "description": "Get list of data sources",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "pageSize": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "default": 100,
            "description": "Number of data sources per page"
          },
          "pageNumber": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          },
          "filter": {
            "type": "string",
            "description": "Filter expression"
          }
        },
        "required": [
          "siteId"
        ],
        "additionalProperties": false
      },
      "method": "GET",
      "endpoint": "/sites/{siteId}/datasources"
    },
    {
      "id": "get_datasource",
      "name": "Get Data Source",
      "description": "Get data source details",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "datasourceId": {
            "type": "string",
            "description": "Data source ID"
          }
        },
        "required": [
          "siteId",
          "datasourceId"
        ],
        "additionalProperties": false
      },
      "method": "GET",
      "endpoint": "/sites/{siteId}/datasources/{datasourceId}"
    },
    {
      "id": "refresh_extract",
      "name": "Refresh Extract",
      "description": "Refresh a data source extract",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "datasourceId": {
            "type": "string",
            "description": "Data source ID"
          }
        },
        "required": [
          "siteId",
          "datasourceId"
        ],
        "additionalProperties": false
      },
      "method": "POST",
      "endpoint": "/sites/{siteId}/datasources/{datasourceId}/refresh"
    },
    {
      "id": "get_users",
      "name": "Get Users",
      "description": "Get list of users",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "pageSize": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "default": 100,
            "description": "Number of users per page"
          },
          "pageNumber": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          },
          "filter": {
            "type": "string",
            "description": "Filter expression"
          }
        },
        "required": [
          "siteId"
        ],
        "additionalProperties": false
      },
      "method": "GET",
      "endpoint": "/sites/{siteId}/users"
    },
    {
      "id": "get_projects",
      "name": "Get Projects",
      "description": "Get list of projects",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "pageSize": {
            "type": "number",
            "minimum": 1,
            "maximum": 1000,
            "default": 100,
            "description": "Number of projects per page"
          },
          "pageNumber": {
            "type": "number",
            "minimum": 1,
            "default": 1,
            "description": "Page number"
          }
        },
        "required": [
          "siteId"
        ],
        "additionalProperties": false
      },
      "method": "GET",
      "endpoint": "/sites/{siteId}/projects"
    },
    {
      "id": "create_project",
      "name": "Create Project",
      "description": "Create a new project",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "name": {
            "type": "string",
            "description": "Project name"
          },
          "description": {
            "type": "string",
            "description": "Project description"
          },
          "contentPermissions": {
            "type": "string",
            "enum": [
              "LockedToProject",
              "ManagedByOwner"
            ],
            "description": "Content permissions mode"
          },
          "parentProjectId": {
            "type": "string",
            "description": "Parent project ID"
          }
        },
        "required": [
          "siteId",
          "name"
        ],
        "additionalProperties": false
      },
      "method": "POST",
      "endpoint": "/sites/{siteId}/projects"
    },
    {
      "id": "publish_workbook",
      "name": "Publish Workbook",
      "description": "Upload a new workbook to a site",
      "endpoint": "/sites/{siteId}/workbooks",
      "method": "POST",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Site ID"
          },
          "projectId": {
            "type": "string",
            "description": "Project ID that will own the workbook"
          },
          "workbookName": {
            "type": "string",
            "description": "Name to assign to the workbook"
          },
          "showTabs": {
            "type": "boolean",
            "description": "Display sheet tabs after publish"
          },
          "overwrite": {
            "type": "boolean",
            "description": "Overwrite an existing workbook with the same name"
          },
          "file": {
            "type": "string",
            "description": "Workbook file contents (.twb/.twbx/.tdsx). Provide a file reference or base64 string."
          },
          "fileName": {
            "type": "string",
            "description": "Filename for the uploaded workbook"
          }
        },
        "required": [
          "siteId",
          "projectId",
          "file"
        ],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "extract_refreshed",
      "name": "Extract Refreshed",
      "description": "Triggered when a data source extract is refreshed",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Filter by site ID"
          },
          "datasourceId": {
            "type": "string",
            "description": "Filter by data source ID"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "datasourceId": {
            "type": "string"
          },
          "datasourceName": {
            "type": "string"
          },
          "siteId": {
            "type": "string"
          },
          "refreshStatus": {
            "type": "string"
          },
          "refreshTime": {
            "type": "string"
          },
          "jobId": {
            "type": "string"
          }
        }
      }
    },
    {
      "id": "workbook_published",
      "name": "Workbook Published",
      "description": "Triggered when a workbook is published",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "siteId": {
            "type": "string",
            "description": "Filter by site ID"
          },
          "projectId": {
            "type": "string",
            "description": "Filter by project ID"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "workbookId": {
            "type": "string"
          },
          "workbookName": {
            "type": "string"
          },
          "siteId": {
            "type": "string"
          },
          "projectId": {
            "type": "string"
          },
          "ownerId": {
            "type": "string"
          },
          "publishTime": {
            "type": "string"
          }
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/sites/{siteId}"
  },
  "release": {
    "semver": "1.1.0",
    "status": "stable",
    "isBeta": false,
    "betaStartedAt": null,
    "deprecationWindow": {
      "startDate": null,
      "sunsetDate": null
    }
  }
}
