{
  "id": "salesforce",
  "name": "Salesforce",
  "description": "Salesforce customer relationship management platform",
  "category": "CRM",
  "icon": "salesforce",
  "color": "#00A1E0",
  "version": "1.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://login.salesforce.com/services/oauth2/authorize",
      "tokenUrl": "https://login.salesforce.com/services/oauth2/token",
      "scopes": ["full", "refresh_token"]
    }
  },
  "baseUrl": "https://your-instance.salesforce.com/services/data/v58.0",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Salesforce",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_record",
      "name": "Create Record",
      "description": "Create a new record",
      "parameters": {
        "type": "object",
        "properties": {
          "sobjectType": {
            "type": "string",
            "description": "SObject type (e.g., Account, Contact, Lead)"
          },
          "fields": {
            "type": "object",
            "description": "Record fields"
          }
        },
        "required": ["sobjectType", "fields"],
        "additionalProperties": false
      }
    },
    {
      "id": "update_record",
      "name": "Update Record",
      "description": "Update an existing record",
      "parameters": {
        "type": "object",
        "properties": {
          "sobjectType": {
            "type": "string",
            "description": "SObject type"
          },
          "recordId": {
            "type": "string",
            "description": "Record ID"
          },
          "fields": {
            "type": "object",
            "description": "Fields to update"
          }
        },
        "required": ["sobjectType", "recordId", "fields"],
        "additionalProperties": false
      }
    },
    {
      "id": "get_record",
      "name": "Get Record",
      "description": "Get a record by ID",
      "parameters": {
        "type": "object",
        "properties": {
          "sobjectType": {
            "type": "string",
            "description": "SObject type"
          },
          "recordId": {
            "type": "string",
            "description": "Record ID"
          }
        },
        "required": ["sobjectType", "recordId"],
        "additionalProperties": false
      }
    },
    {
      "id": "query_records",
      "name": "Query Records",
      "description": "Execute SOQL query",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "SOQL query string"
          }
        },
        "required": ["query"],
        "additionalProperties": false
      }
    }
  ],
  "triggers": [
    {
      "id": "record_created",
      "name": "Record Created",
      "description": "Triggered when a record is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "sobjectType": {
            "type": "string",
            "description": "Filter by SObject type"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "Id": {"type": "string"},
          "sobjectType": {"type": "string"}
        }
      }
    }
  ],
  "testConnection": {
    "method": "GET",
    "endpoint": "/limits"
  }
}