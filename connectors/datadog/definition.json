        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "query": {
            "type": "string"
          },
          "state": {
            "type": "string"
          }
        }
      }
    },
