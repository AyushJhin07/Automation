  ],
  "triggers": [
    {
      "id": "presentation_created",
      "name": "Presentation Created",
      "description": "Triggered when a new presentation is created",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "presentationId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "locale": {
            "type": "string"
          },
          "revisionId": {
            "type": "string"
          },
          "pageSize": {
            "type": "object"
          }
        }
      }
    },
    {
      "id": "presentation_updated",
      "name": "Presentation Updated",
      "description": "Triggered when a presentation is updated",
      "type": "webhook",
      "parameters": {
        "type": "object",
        "properties": {
          "presentationId": {
            "type": "string",
            "description": "Filter by specific presentation"
          }
        },
        "required": [],
        "additionalProperties": false
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "presentationId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "revisionId": {
            "type": "string"
          },
          "slides": {
            "type": "array"
          }
        }
      }
    }
