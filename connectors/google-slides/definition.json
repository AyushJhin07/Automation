{
  "id": "google-slides",
  "name": "Google Slides",
  "description": "Google Slides for presentation creation and collaboration",
  "category": "Productivity",
  "icon": "google-slides",
  "color": "#FBBC04",
  "version": "1.0.0",
  "authentication": {
    "type": "oauth2",
    "config": {
      "authUrl": "https://accounts.google.com/o/oauth2/v2/auth",
      "tokenUrl": "https://oauth2.googleapis.com/token",
      "scopes": [
        "https://www.googleapis.com/auth/presentations"
      ]
    }
  },
  "baseUrl": "https://slides.googleapis.com/v1",
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Google Slides",
      "parameters": {
        "type": "object",
        "properties": {},
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "create_presentation",
      "name": "Create Presentation",
      "description": "Create a new Google Slides presentation",
      "parameters": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Presentation title"
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "id": "get_presentation",
      "name": "Get Presentation",
      "description": "Get presentation details",
      "parameters": {
        "type": "object",
        "properties": {
          "presentationId": {
            "type": "string",
            "description": "Presentation ID"
          }
        },
        "required": [
          "presentationId"
        ],
        "additionalProperties": false
      }
    },
    {
      "id": "batch_update",
      "name": "Batch Update",
      "description": "Execute batch updates on presentation",
      "parameters": {
        "type": "object",
        "properties": {
          "presentationId": {
            "type": "string",
            "description": "Presentation ID"
          },
          "requests": {
            "type": "array",
            "items": {
              "type": "object"
            },
            "description": "Array of batch update requests"
          },
          "writeControl": {
            "type": "object",
            "properties": {
              "requiredRevisionId": {
                "type": "string"
              }
            },
            "description": "Write control settings"
          }
        },
        "required": [
          "presentationId",
          "requests"
        ],
        "additionalProperties": false
      }
    },
    {
      "id": "create_slide",
      "name": "Create Slide",
      "description": "Create a new slide",
      "parameters": {
        "type": "object",
        "properties": {
          "presentationId": {
            "type": "string",
            "description": "Presentation ID"
          },
          "slideLayoutReference": {
            "type": "object",
            "properties": {
              "predefinedLayout": {
                "type": "string",
                "enum": [
                  "BLANK",
                  "CAPTION_ONLY",
                  "TITLE",
                  "TITLE_AND_BODY",
                  "TITLE_AND_TWO_COLUMNS",
                  "TITLE_ONLY",
                  "SECTION_HEADER",
                  "SECTION_TITLE_AND_DESCRIPTION",
                  "ONE_COLUMN_TEXT",
                  "MAIN_POINT",
                  "BIG_NUMBER"
                ],
                "description": "Predefined layout"
              },
              "layoutId": {
                "type": "string"
              }
            },
            "description": "Slide layout reference"
          },
          "objectId": {
            "type": "string",
            "description": "Object ID for the slide"
          },
          "insertionIndex": {
            "type": "number",
            "description": "Index to insert slide at"
          },
          "placeholderIdMappings": {
            "type": "array",
            "items": {
              "type": "object"
            },
            "description": "Placeholder ID mappings"
          }
        },
        "required": [
          "presentationId"
        ],
        "additionalProperties": false
      }
    },
    {
      "id": "delete_object",
      "name": "Delete Object",
      "description": "Delete an object from presentation",
      "parameters": {
        "type": "object",
        "properties": {
          "presentationId": {
            "type": "string",
            "description": "Presentation ID"
          },
          "objectId": {
            "type": "string",
            "description": "Object ID to delete"
          }
        },
        "required": [
          "presentationId",
          "objectId"
        ],
        "additionalProperties": false
      }
    },
    {
      "id": "insert_text",
      "name": "Insert Text",
      "description": "Insert text into a text box or shape",
      "parameters": {
        "type": "object",
        "properties": {
          "presentationId": {
            "type": "string",
            "description": "Presentation ID"
          },
          "objectId": {
            "type": "string",
            "description": "Object ID to insert text into"
          },
          "text": {
            "type": "string",
            "description": "Text to insert"
          },
          "insertionIndex": {
            "type": "number",
            "default": 0,
            "description": "Character index to insert at"
          }
        },
        "required": [
          "presentationId",
          "objectId",
          "text"
        ],
        "additionalProperties": false
      }
    },
    {
      "id": "replace_all_text",
      "name": "Replace All Text",
      "description": "Replace all instances of text",
      "parameters": {
        "type": "object",
        "properties": {
          "presentationId": {
            "type": "string",
            "description": "Presentation ID"
          },
          "containsText": {
            "type": "object",
            "properties": {
              "text": {
                "type": "string"
              },
              "matchCase": {
                "type": "boolean",
                "default": false
              }
            },
            "description": "Text to find and replace"
          },
          "replaceText": {
            "type": "string",
            "description": "Replacement text"
          },
          "pageObjectIds": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Limit replacement to specific slides"
          }
        },
        "required": [
          "presentationId",
          "containsText",
          "replaceText"
        ],
        "additionalProperties": false
      }
    },
    {
