    },
    {
      "id": "create_image",
      "name": "Create Image",
      "description": "Create an image on a slide",
      "parameters": {
        "type": "object",
        "properties": {
          "presentationId": {
            "type": "string",
            "description": "Presentation ID"
          },
          "pageId": {
            "type": "string",
            "description": "Slide ID to add image to"
          },
          "objectId": {
            "type": "string",
            "description": "Object ID for the image"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Image URL"
          },
          "elementProperties": {
            "type": "object",
            "properties": {
              "pageObjectId": {
                "type": "string"
              },
              "size": {
                "type": "object"
              },
              "transform": {
                "type": "object"
              }
            },
            "description": "Element properties"
          }
        },
        "required": [
          "presentationId",
          "pageId",
          "objectId",
          "url"
        ],
        "additionalProperties": false
      }
