          "created_after": {
            "type": "string",
            "format": "date-time",
            "description": "Return candidates created after this timestamp"
          },
          "updated_before": {
            "type": "string",
            "format": "date-time",
            "description": "Return candidates updated before this timestamp"
          },
          "updated_after": {
            "type": "string",
