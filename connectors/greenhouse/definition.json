              "type": "object",
              "properties": {
                "value": {
                  "type": "string"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "home",
                    "work",
                    "mobile",
                    "skype",
                    "other"
                  ]
                }
              }
            },
            "description": "Phone numbers"
          },
          "addresses": {
