          "email_addresses": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": {
                  "type": "string",
                  "format": "email"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "personal",
                    "work",
                    "other"
                  ]
                }
              }
            },
            "description": "Email addresses"
