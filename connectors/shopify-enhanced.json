{
  "id": "shopify-enhanced",
  "name": "Shopify Enhanced",
  "description": "Shopify Enhanced integration for automation workflows",
  "category": "Business Apps",
  "icon": "placeholder",
  "color": "#7AB55C",
  "version": "1.0.0",
  "authentication": {
    "type": "oauth2"
  },
  "baseUrl": "https://api.shopify.com",
  "rateLimits": {
    "requestsPerSecond": 5,
    "requestsPerMinute": 300,
    "dailyLimit": 10000
  },
  "actions": [
    {
      "id": "test_connection",
      "name": "Test Connection",
      "description": "Test the connection to Shopify Enhanced and verify authentication",
      "parameters": {},
      "requiredScopes": [
        "read_products"
      ],
      "rateLimits": {
        "requests": 10,
        "period": "1m",
        "scope": "user"
      }
    },
    {
      "id": "create_record",
      "name": "Create Record",
      "description": "Create a new record",
      "parameters": {
        "data": {
          "type": "object",
          "required": true,
          "description": "Record data"
        }
      }
    },
    {
      "id": "update_record",
      "name": "Update Record",
      "description": "Update an existing record",
      "parameters": {
        "id": {
          "type": "string",
          "required": true,
          "description": "Record ID"
        },
        "data": {
          "type": "object",
          "required": true,
          "description": "Updated data"
        }
      }
    },
    {
      "id": "get_record",
      "name": "Get Record",
      "description": "Retrieve a specific record",
      "parameters": {
        "id": {
          "type": "string",
          "required": true,
          "description": "Record ID"
        }
      }
    }
  ],
  "triggers": [
    {
      "id": "record_created",
      "name": "Record Created",
      "description": "Triggered when a record is created",
      "parameters": {},
      "webhookSupport": true,
      "pollingInterval": "5m"
    },
    {
      "id": "record_updated",
      "name": "Record Updated",
      "description": "Triggered when a record is updated",
      "parameters": {},
      "webhookSupport": true,
      "pollingInterval": "5m"
    }
  ]
}